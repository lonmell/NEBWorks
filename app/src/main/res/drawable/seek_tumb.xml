<?xml version="1.0" encoding="utf-8"?>
<!-- 원모양의 시크바 컨트롤러 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval"
    android:useLevel="false"  >
    <!-- 배경 -->
    <solid
        android:color="#ffffff"/>
    <!-- 테두리 -->
    <stroke
        android:width="0dp"
        android:color="#ffffff" />

    <corners android:radius="60dp"/>

    <!-- 크기 -->
    <size
        android:width="25dp"
        android:height="25dp"/>
</shape>