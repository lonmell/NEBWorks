<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.login.LoginActivity"
    tools:ignore="HardcodedText">

    <ImageView
        android:id="@+id/title_icon"
        android:layout_width="275dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/title_icon2"
        app:layout_constraintBottom_toTopOf="@+id/input01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/input01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/input02"
        app:layout_constraintTop_toBottomOf="@+id/title_icon">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="이메일"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/device_num_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/default_input_round"
            android:fontFamily="@font/applesdgothicneo"
            android:hint="이메일 입력"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/black"
            android:textColorHint="#54585A"
            android:textSize="16sp"
            tools:ignore="HardcodedText,TouchTargetSizeCheck,TextContrastCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/input02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/user_btn_box"
        app:layout_constraintTop_toBottomOf="@+id/input01">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="비밀번호"
            tools:ignore="TextContrastCheck" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/pwd_edit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/default_input_round"
                android:fontFamily="@font/applesdgothicneo"
                android:hint="비밀번호 입력"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black"
                android:textColorHint="#949494"
                android:textSize="16sp"
                tools:ignore="HardcodedText,TouchTargetSizeCheck,DuplicateSpeakableTextCheck,TextContrastCheck" />

            <LinearLayout
                android:id="@+id/turn_pwd_char"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:padding="5dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/turn_eye"
                    android:layout_width="22dp"
                    android:layout_height="15dp"
                    android:background="@drawable/visible" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_btn_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/middle_line"
        app:layout_constraintTop_toBottomOf="@+id/input02">

        <androidx.cardview.widget.CardView
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:cardBackgroundColor="@color/new_blue"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="center"
                android:text="로그인"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/join_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            app:cardBackgroundColor="@color/blue_200"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="center"
                android:text="회원가입"
                android:textColor="@color/new_blue"
                android:textSize="22sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/middle_line"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toTopOf="@+id/middle_line2"
        app:layout_constraintTop_toBottomOf="@+id/user_btn_box">

        <TextView
            android:id="@+id/find_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="이메일 찾기"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:background="#DBDBDB"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/find_pw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/pretendard_regular"
            android:text="비밀번호 재설정"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/middle_line2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintBottom_toTopOf="@+id/social_box"
        app:layout_constraintTop_toBottomOf="@+id/middle_line">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="16dp"
            android:background="@color/new_blue" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="소셜계정으로 로그인"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/new_blue"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:background="@color/new_blue" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/social_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="52dp"
        android:elevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/ltd_tv"
        app:layout_constraintTop_toBottomOf="@+id/middle_line2">
        <!--네이버 로그인 예정-->
        <RelativeLayout
            android:id="@+id/naver_login"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_alignParentStart="true">

            <com.navercorp.nid.oauth.view.NidOAuthLoginButton
                android:id="@+id/buttonOAuthLoginImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/naver_icon2"
                tools:ignore="ImageContrastCheck" />
        </RelativeLayout>
        <!--카카오 간편로그인-->
        <ImageView
            android:id="@+id/kakao_login_area"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/kakao_icon"
            android:fontFamily="@font/applesdgothicneo" />
        <!--구글 간편로그인-->
        <RelativeLayout
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_centerInParent="true"
                android:background="@drawable/google_icon" />

            <com.google.android.gms.common.SignInButton
                android:id="@+id/google_login_area"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_alert_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4D000000"
        android:clickable="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="120dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/loading_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <TextView
        android:id="@+id/ltd_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/login_ltd"
        android:textColor="#666666"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
