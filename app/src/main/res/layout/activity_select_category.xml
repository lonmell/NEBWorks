<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottomsheet_round"
    tools:ignore="MissingDefaultResource,HardcodedText">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/applesdgothicneo"
        android:text="게시글 분류"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:text="닫기"
        android:textColor="#3498DB"
        android:textSize="17sp"
        android:visibility="gone"
        tools:ignore="HardcodedText" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/category_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:minHeight="200dp"
        android:visibility="gone"
        app:layout_constraintVertical_bias="0" />

    <!-- 첫번째 줄 -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/feed_tx01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#정보에요"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular"
                android:padding="5dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/feed_tx02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#화나요"
                android:textSize="12sp"
                android:layout_marginStart="16dp"
                android:padding="5dp"
                android:fontFamily="@font/inter_regular"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/feed_tx03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#억울해요"
                android:textSize="12sp"
                android:layout_marginStart="16dp"
                android:padding="5dp"
                android:fontFamily="@font/inter_regular"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/feed_tx04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#자랑해요"
                android:layout_marginStart="16dp"
                android:textSize="12sp"
                android:padding="5dp"
                android:fontFamily="@font/inter_regular"
                android:textColor="#000000"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- 두번째 줄 -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/feed_tx05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#점주가 말한다"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular"
                android:padding="5dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/feed_tx06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#알바가 말한다"
                android:textSize="12sp"
                android:layout_marginStart="16dp"
                android:padding="5dp"
                android:fontFamily="@font/inter_regular"
                android:textColor="#000000"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- 세번째 줄 -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/feed_tx07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#구직(알바 구합니다)"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular"
                android:padding="5dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/feed_tx08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#구인(알바 구합니다)"
                android:textSize="12sp"
                android:layout_marginStart="16dp"
                android:padding="5dp"
                android:fontFamily="@font/inter_regular"
                android:textColor="#000000"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- 네번째 줄 -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/feed_tx09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#이런 사람 조심하세요"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular"
                android:padding="5dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/feed_tx10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#이런 상황 조심하세요"
                android:textSize="12sp"
                android:layout_marginStart="16dp"
                android:padding="5dp"
                android:fontFamily="@font/inter_regular"
                android:textColor="#000000"/>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/select_kind01"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="자유게시판"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:fontFamily="@font/inter_regular"
        android:textColor="#000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedede"/>
    <TextView
        android:id="@+id/select_kind02"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="사장님페이지"
        android:textSize="12sp"
        android:gravity="center"
        android:fontFamily="@font/inter_regular"
        android:textColor="#000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedede"/>
    <TextView
        android:id="@+id/select_kind03"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="세금/노무"
        android:textSize="12sp"
        android:gravity="center"
        android:fontFamily="@font/inter_regular"
        android:textColor="#000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedede"/>
</LinearLayout>