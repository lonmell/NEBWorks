<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.community.CommunityDetailActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/write_comment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="59dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:text="커뮤니티"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:id="@+id/back_btn"
                    android:layout_width="59dp"
                    android:layout_height="59dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:background="@drawable/find_right_arrow"
                        android:padding="20dp"
                        android:rotation="180" />
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="25dp">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="25sp"
                    android:textColor="@color/black"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/profile_area"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#dcdcdc"
                        app:cardCornerRadius="60dp">
                        <ImageView
                            android:id="@+id/profile_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/certi01"
                            android:layout_alignParentStart="true"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@+id/profile_area"
                        android:text="name"
                        android:gravity="center"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/inter_bold"
                        android:textColor="#949494"/>
                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="0000.00.00"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="16sp"
                        android:textColor="#696969"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/contents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="소관부처"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="16sp"
                    android:layout_marginTop="35dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/cate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cate"
                    android:background="@drawable/grayback_gray_round"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/blue"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DBDBDB"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/view_com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="start|top"
                    android:padding="8dp"
                    android:text="조회수 0 / 댓글 0"
                    android:textColor="#54585A"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/like_cnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="20dp"
                    android:drawableEnd="@drawable/ic_like_off"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="start|top"
                    android:padding="8dp"
                    android:text="0   "
                    android:textColor="#54585A"
                    android:textSize="15sp" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DBDBDB"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/comment_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/no_data_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/comment_list"
                    android:layout_alignTop="@+id/comment_list"
                    android:layout_alignEnd="@+id/comment_list"
                    android:layout_alignBottom="@+id/comment_list"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="-1dp"
                    android:gravity="center"
                    android:text="No Data"
                    android:textColor="#dcdcdc"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/write_comment"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:elevation="5dp"
        android:visibility="visible"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/myprofile_area"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardElevation="0dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"
            app:cardBackgroundColor="#dcdcdc"
            app:cardCornerRadius="60dp">
            <ImageView
                android:id="@+id/myprofile_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/certi01"
                android:layout_alignParentStart="true"/>
        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/add_comment_txt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/add_comment_btn"
            android:layout_toEndOf="@+id/myprofile_area"
            android:background="@drawable/default_gray_round"
            android:gravity="center|start"
            android:hint="댓글추가"
            android:inputType="textMultiLine"
            android:minHeight="50dp"
            android:paddingStart="20dp"
            android:scrollHorizontally="false"
            android:textColor="@color/black"
            android:textColorHint="#696969"
            tools:ignore="HardcodedText,RtlSymmetry" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_alert_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:visibility="gone">

        <ImageView
            android:id="@+id/loading_view"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            tools:ignore="ContentDescription" />

    </RelativeLayout>
</RelativeLayout>

