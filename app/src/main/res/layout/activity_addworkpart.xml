<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.workstatus.AddWorkPartActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingBottom="20dp"
        android:orientation="vertical">
        <!--@+id/top_bar-->
        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_alignParentTop="true"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/back_btn"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/find_right_arrow"
                    android:rotation="180" />
            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/pretendard_bold"
                android:text="근무시간 추가"
                android:textColor="@color/black"
                android:textSize="20sp" />


        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기본정보"
                    android:textSize="28dp"
                    android:fontFamily="@font/gangwonedu_bold"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/place_change_area"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_below="@+id/close_btn"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginEnd="20dp"
                    android:padding="5dp"
                    app:cardBackgroundColor="@color/new_blue"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_toStartOf="@+id/refresh_area"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/store_name"
                                android:fontFamily="@font/pretendard_bold"
                                android:gravity="start|center"
                                android:text="현재 선택된 매장"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/store_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gangwonedu_bold"
                                android:gravity="start|center"
                                android:text="store_name"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/refresh_area"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="15dp"
                            android:clickable="false"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/refresh_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_refresh_btn_white"
                                android:clickable="false"
                                android:scaleType="fitXY" />
                        </LinearLayout>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="15dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center"
                        android:text="근무요일"
                        android:textColor="#242627"
                        android:textSize="16sp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/yoil"
                        android:layout_width="40dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#f2f2f2"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:id="@+id/yoil_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/pretendard_bold"
                            android:gravity="start|center"
                            android:paddingStart="15dp"
                            android:text="근무요일 / 근무일 선택"
                            android:textColor="#696969"
                            android:textSize="16sp" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#F5F6F8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="15dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center"
                        android:text="근무자"
                        android:textColor="#242627"
                        android:textSize="16sp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/select_mem"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#f2f2f2"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/blue_200"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/mem_name"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="start"
                                android:fontFamily="@font/pretendard_bold"
                                android:gravity="start|center"
                                android:paddingStart="15dp"
                                android:text="name"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/mem_cnt"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="start"
                                android:fontFamily="@font/pretendard_bold"
                                android:gravity="start|center"
                                android:paddingStart="15dp"
                                android:text="총 0명 근무 중"
                                android:textColor="@color/new_blue"
                                android:textSize="14sp"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/mem_select"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="end"
                                android:fontFamily="@font/pretendard_bold"
                                android:gravity="center"
                                android:paddingEnd="5dp"
                                android:paddingStart="15dp"
                                android:text="근무자를 선택하세요 >"
                                android:textColor="#949494"
                                android:textSize="14sp"
                                android:visibility="visible" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#F5F6F8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:text="근무시간"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/inputbox01box"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toStartOf="@+id/inputbox_inside"
                            app:cardBackgroundColor="#ffffff"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:id="@+id/select_time01"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:gravity="center"
                                android:text="HHMM"
                                android:textSize="16sp" />
                        </androidx.cardview.widget.CardView>

                        <ImageView
                            android:id="@+id/inputbox_inside"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/left_arrow_resize"
                            android:rotation="180"
                            android:textColor="#000000" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/inputbox02box"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@+id/inputbox_inside"
                            app:cardBackgroundColor="#ffffff"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:id="@+id/select_time02"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="HHMM"
                                android:textSize="16sp" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>

                    <TimePicker
                        android:id="@+id/time_setpicker1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:numbersBackgroundColor="#ffffff"
                        android:visibility="gone"
                        android:numbersSelectorColor="@color/new_blue"
                        android:numbersTextColor="@color/black"
                        android:theme="@style/NumberPicker"
                        android:timePickerMode="spinner" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line01"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:background="#F5F6F8"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/break_time_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:text="휴게시간"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/inputbox03box"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toStartOf="@+id/inputbox_inside2"
                            app:cardBackgroundColor="#ffffff"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:id="@+id/select_time03"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:gravity="center"
                                android:text="HHMM"
                                android:textSize="16sp" />
                        </androidx.cardview.widget.CardView>

                        <ImageView
                            android:id="@+id/inputbox_inside2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/left_arrow_resize"
                            android:rotation="180"
                            android:textColor="#000000" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/inputbox04box"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@+id/inputbox_inside2"
                            app:cardBackgroundColor="#ffffff"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:id="@+id/select_time04"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="HHMM"
                                android:textSize="16sp" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>

                    <TimePicker
                        android:id="@+id/time_setpicker2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:numbersBackgroundColor="#ffffff"
                        android:numbersSelectorColor="@color/new_blue"
                        android:numbersTextColor="@color/black"
                        android:visibility="gone"
                        android:theme="@style/NumberPicker"
                        android:timePickerMode="spinner" />

                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/save_workpart"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/new_blue"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/add_workpart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="center"
                    android:text="추가하기"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
