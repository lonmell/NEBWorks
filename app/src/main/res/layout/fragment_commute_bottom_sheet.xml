<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbox_round"
    tools:context=".bottomsheet.CommuteBottomSheet">

    <TextView
        android:id="@+id/commute_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/gangwonedu_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:text="출퇴근 수정"/>

    <LinearLayout
        android:id="@+id/commute_user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/commute_title"
        app:layout_constraintTop_toBottomOf="@id/commute_title">

        <TextView
            android:id="@+id/commute_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gangwonedu_bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="김신입" />

        <TextView
            android:id="@+id/commute_working_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/new_blue"
            android:textSize="14sp"
            android:text="근무시간 00:00 ~ 00:00" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/commute_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/commute_user_info">

        <LinearLayout
            android:id="@+id/commute_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:id="@+id/gotowork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/gotowork_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_bold"
                        android:text="출근"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/gotowork_text_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:fontFamily="@font/pretendard_bold"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text="오전 00:00" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp" >

                <LinearLayout
                    android:id="@+id/gooffwork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/gooffwork_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_bold"
                        android:text="퇴근"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/gooffwork_text_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:fontFamily="@font/pretendard_bold"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text="오후 00:00" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TimePicker
            android:id="@+id/commute_timepicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:theme="@style/NumberPicker"
            android:timePickerMode="spinner"
            android:visibility="gone"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/commute_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintTop_toBottomOf="@id/commute_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/new_blue"
            android:fontFamily="@font/gangwonedu_bold"
            android:gravity="center"
            android:text="저장"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

    <View
        app:layout_constraintStart_toStartOf="@id/commute_ok"
        app:layout_constraintTop_toBottomOf="@id/commute_ok"
        app:layout_constraintEnd_toEndOf="@id/commute_ok"
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>