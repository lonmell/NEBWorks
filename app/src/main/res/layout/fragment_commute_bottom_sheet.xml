<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/loginbox_round"
    tools:context=".bottomsheet.CommuteBottomSheet">

    <TextView
        android:id="@+id/commute_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/gangwonedu_bold"
        android:text="출퇴근 수정"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/commute_user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/commute_title"
        app:layout_constraintTop_toBottomOf="@id/commute_title">

        <TextView
            android:id="@+id/commute_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gangwonedu_bold"
            android:text="김신입"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/commute_working_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="근무시간 00:00 ~ 00:00"
            android:textColor="@color/new_blue"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/commute_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">

        <LinearLayout
            android:id="@+id/commute_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/gotowork"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/gotowork_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="출근"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/gotowork_text_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10sp"
                    android:layout_toStartOf="@+id/gotowork_time_del"
                    android:layout_toEndOf="@+id/gotowork_text"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="center"
                    android:text="오전 00:00"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/gotowork_time_del"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/ic_baseline_cancel_24_black" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/gooffwork"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/gooffwork_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="퇴근"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/gooffwork_text_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10sp"
                    android:gravity="center"
                    android:layout_toEndOf="@+id/gooffwork_text"
                    android:layout_toStartOf="@+id/gooffwork_time_del"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="오후 00:00"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/gooffwork_time_del"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_baseline_cancel_24_black" />

            </RelativeLayout>

        </LinearLayout>

        <TimePicker
            android:id="@+id/commute_timepicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:theme="@style/NumberPicker"
            android:timePickerMode="spinner"
            android:visibility="gone" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/commute_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintTop_toBottomOf="@id/commute_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/new_blue"
            android:fontFamily="@font/gangwonedu_bold"
            android:gravity="center"
            android:text="저장"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="@id/commute_ok"
        app:layout_constraintStart_toStartOf="@id/commute_ok"
        app:layout_constraintTop_toBottomOf="@id/commute_ok" />

</LinearLayout>