<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:ignore="UsingOnClickInXml">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/profile_area"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/user_profile_box"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:cardBackgroundColor="#dbdbdb"
                app:cardCornerRadius="60dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/user_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_toStartOf="@+id/my_stting_area"
                android:layout_toEndOf="@+id/user_profile_box"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gangwonedu_bold"
                    android:gravity="start|center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/jikgup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_regular"
                    android:gravity="start|center"
                    android:text="미정"
                    android:textColor="@color/new_blue"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_area"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            
            <TextView
                android:id="@+id/setting_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/gangwonedu_bold"
                android:text="설정"/>

            <TextView
                android:id="@+id/setting_list01_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/pretendard_regular"
                android:gravity="center|start"
                android:text="프로필 설정"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:drawableEndCompat="@drawable/ic_more_arrow"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/setting_list02_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:gravity="center|start"
                android:text="알림 설정"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="50dp"
                app:drawableEndCompat="@drawable/ic_more_arrow"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/record_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기록 확인"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/gangwonedu_bold"/>

            <TextView
                android:id="@+id/setting_list03_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center|start"
                android:text="알림 내역"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:drawableEndCompat="@drawable/ic_more_arrow"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/setting_list03_1_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:gravity="center|start"
                android:text="작성 게시글 확인"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:drawableEndCompat="@drawable/ic_more_arrow"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/setting_list03_2_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:gravity="center|start"
                android:text="작성 댓글 확인"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:drawableEndCompat="@drawable/ic_more_arrow"
                tools:ignore="HardcodedText" />

<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="1dp"-->
<!--                android:background="#f2f2f2"-->
<!--                android:orientation="vertical" />-->

<!--            <TextView-->
<!--                android:id="@+id/setting_list03_3_txt"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="45dp"-->
<!--                android:layout_marginStart="15dp"-->
<!--                android:layout_marginEnd="15dp"-->
<!--                android:fontFamily="@font/pretendard_regular"-->
<!--                android:gravity="center|start"-->
<!--                android:text="북마크"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="14sp"-->
<!--                app:drawableEndCompat="@drawable/ic_page_move_arrow"-->
<!--                tools:ignore="HardcodedText" />-->

            <TextView
                android:id="@+id/etc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기타"
                android:textSize="20sp"
                android:fontFamily="@font/gangwonedu_bold"
                android:layout_marginTop="45dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/setting_list04_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:gravity="center|start"
                android:text="카톡 채널 추가"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:drawableEndCompat="@drawable/ic_more_arrow"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:id="@+id/forbidden_area"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/setting_forbidden"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:gravity="center|start"
                    android:text="혐오용어 추가"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:drawableEndCompat="@drawable/ic_page_move_arrow"
                    tools:ignore="HardcodedText" />

            </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/setting_list05_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pretendard_regular"
                    android:gravity="center|start"
                    android:text="회원탈퇴"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:drawableEndCompat="@drawable/ic_more_arrow"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/login_method_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="20sp"
                    android:background="@drawable/naver_icon"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
