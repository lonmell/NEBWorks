<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:background="@drawable/default_gray_round"
    android:padding="0dp">

    <LinearLayout
        android:id="@+id/rank_area"
        android:layout_width="26dp"
        android:layout_height="24dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:background="@drawable/rank_round">

        <TextView
            android:id="@+id/rank_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rank_area"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/list_setting"
        android:fontFamily="@font/inter_bold"
        android:gravity="start|center"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/list_setting"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp">

        <ImageView
            android:layout_width="3dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:background="@drawable/list_setting" />
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/profile_area"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:cardCornerRadius="60dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/title"
        android:layout_alignStart="@+id/title"
        app:cardBackgroundColor="#dcdcdc"
        android:visibility="gone"
        app:cardElevation="0dp">
        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:scaleType="fitXY" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_area"
        android:layout_alignBottom="@+id/profile_area"
        android:layout_marginStart="15dp"
        android:visibility="gone"
        android:layout_toEndOf="@+id/profile_area"
        android:fontFamily="@font/inter_regular"
        android:gravity="start|center"
        android:text="name"
        android:textColor="#949494"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/write_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_area"
        android:layout_alignEnd="@+id/list_setting"
        android:layout_alignBottom="@+id/profile_area"
        android:layout_marginStart="15dp"
        android:visibility="gone"
        android:fontFamily="@font/inter_regular"
        android:gravity="start|center"
        android:text="0000.00.00"
        android:textColor="#949494"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_area"
        android:layout_alignStart="@+id/profile_area"
        android:layout_alignEnd="@+id/list_setting"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter_regular"
        android:gravity="start|center"
        android:maxLines="4"
        android:text="contents"
        android:textColor="@color/black"
        android:textSize="13sp" />
    <LinearLayout
        android:id="@+id/category_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contents"
        android:layout_alignStart="@+id/title"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:background="@drawable/grayback_gray_round">
        <TextView
            android:id="@+id/categorytv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:layout_below="@+id/profile_area"
            android:layout_alignStart="@+id/profile_area"
            android:layout_alignEnd="@+id/list_setting"
            android:gravity="start|top"
            android:textSize="15sp"
            android:text="#category"
            android:padding="8dp"
            android:textColor="@color/blue" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/category_box"
        android:layout_marginTop="10dp"
        android:background="#DBDBDB" />

    <TextView
        android:id="@+id/view_com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line01"
        android:layout_alignStart="@+id/profile_area"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="start|top"
        android:padding="8dp"
        android:text="조회수 0 / 댓글 0"
        android:textColor="#54585A"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/like_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/line01"
        android:layout_alignEnd="@+id/list_setting"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/like_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/inter_bold"
            android:gravity="start|center"
            android:padding="8dp"
            android:text="0"
            android:textColor="#54585A"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/like_icon"
            android:layout_width="20dp"
            android:layout_height="17dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_like_off" />
    </LinearLayout>
</RelativeLayout>