<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="직원 목록"
        android:textSize="26sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pretendard_bold"
        android:textColor="@color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/select_area"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/fragmentbtn1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:text="전체"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,NestedWeights" />

                <LinearLayout
                    android:id="@+id/fragmentline1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#8EB3FC"
                    android:orientation="horizontal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragmentbtn2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:text="등록"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,NestedWeights" />

                <LinearLayout
                    android:id="@+id/fragmentline2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:orientation="horizontal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragmentbtn3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:text="대기"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,NestedWeights" />

                <LinearLayout
                    android:id="@+id/fragmentline3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:orientation="horizontal" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fragmentbtn4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:text="휴직"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,NestedWeights" />

                <LinearLayout
                    android:id="@+id/fragmentline4"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:orientation="horizontal" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/child_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/select_area" />

<!--        <LinearLayout-->
<!--            android:id="@+id/add_member"-->
<!--            android:layout_width="80dp"-->
<!--            android:layout_height="80dp"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:layout_alignParentBottom="true"-->
<!--            android:layout_marginEnd="20dp"-->
<!--            android:layout_marginBottom="34dp"-->
<!--            android:background="@drawable/addmemberbtn" />-->

        <RelativeLayout
            android:id="@+id/login_alert_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4D000000"
            android:clickable="false"
            android:visibility="gone">

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="120dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/loading_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/no_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="#ffffff"
            android:orientation="vertical"
            android:visibility="visible">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#f2f2f2"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="29dp"
                        android:background="@drawable/remove_blank" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="해당되는 직원이 없습니다.\n직원을 추가해주세요."
                        android:textSize="17sp"
                        android:textColor="#696969"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="29dp"
                        android:gravity="center"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <include
            android:id="@+id/add_btn"
            layout="@layout/addbtn"/>
    </RelativeLayout>
</LinearLayout>