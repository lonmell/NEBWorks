<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbox_round"
    tools:context=".ui.feed.FeedAddActivity">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_alignParentTop="true"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/close_btn"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/find_right_arrow"
                android:padding="20dp"
                android:rotation="180" />
        </LinearLayout>


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/applesdgothicneo"
            android:gravity="center"
            android:text="매장공지"
            android:textColor="#000"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/area_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:id="@+id/profile_area"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/profile_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/certi01"
                        android:scaleType="fitXY" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/profile_area"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="start|center"
                    android:text="구직자 이름 | 직책"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="제목"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/input_worktitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/default_gray_round"
                android:fontFamily="@font/pretendard_bold"
                android:hint="제목을 입력해주세요"
                android:importantForAutofill="no"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:textColor="@color/black"
                android:textColorHint="#a9a9a9"
                android:textSize="16sp"
                tools:ignore="HardcodedText,TextContrastCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="내용"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <com.krafte.nebworks.ui.CustomEditText
                android:id="@+id/input_workcontents"
                android:layout_width="match_parent"
                android:layout_height="271dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/default_gray_round"
                android:fontFamily="@font/pretendard_regular"
                android:gravity="start|top"
                android:hint="내용 입력"
                android:inputType="textMultiLine"
                android:maxWidth="5.0dip"
                android:minWidth="10.0dip"
                android:padding="10dp"
                android:scrollHorizontally="false"
                android:textColor="#000000"
                android:textColorHint="#a9a9a9"
                android:textSize="16sp"
                tools:ignore="HardcodedText,SpeakableTextPresentCheck,TextContrastCheck" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="33dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="기간"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="입력할 경우 [이벤트] 로 표시됩니다."
                    android:textColor="@color/new_blue"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_toStartOf="@+id/event_starttv"
                        app:cardBackgroundColor="@color/blue_200"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/event_starttime"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:fontFamily="@font/inter_regular"
                                android:gravity="start|center"
                                android:hint="시작일"
                                android:paddingStart="15dp"
                                android:paddingEnd="15dp"
                                android:textColor="@color/new_blue"
                                android:textColorHint="@color/new_blue" />

                            <ImageView
                                android:id="@+id/start_calendar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="15dp"
                                android:background="@drawable/calendar_resize"
                                android:backgroundTint="@color/new_blue" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/event_starttv"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center"
                        android:text="부터"
                        android:textColor="@color/black" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_toStartOf="@+id/event_endttv"
                        app:cardBackgroundColor="@color/blue_200"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/event_endttime"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:fontFamily="@font/inter_regular"
                                android:gravity="start|center"
                                android:hint="시작일"
                                android:paddingStart="15dp"
                                android:paddingEnd="15dp"
                                android:textColor="@color/new_blue"
                                android:textColorHint="@color/new_blue" />

                            <ImageView
                                android:id="@+id/end_calendar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="15dp"
                                android:background="@drawable/calendar_resize"
                                android:backgroundTint="@color/new_blue" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/event_endttv"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center"
                        android:text="까지"
                        android:textColor="@color/black" />
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="링크"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/input_movelink"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="#ffffff"
                android:gravity="top|start"
                android:hint="http://"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:scrollHorizontally="false"
                android:textColor="#000000"
                android:textColorHint="#a9a9a9"
                android:textSize="16sp"
                tools:ignore="HardcodedText,SpeakableTextPresentCheck,TextContrastCheck,TouchTargetSizeCheck" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="#a9a9a9" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="매장사진"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
            <LinearLayout
                android:id="@+id/hideimg_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">
                <ImageView
                    android:id="@+id/hideimg01"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/empty_photo"
                    android:scaleType="fitXY" />
                <ImageView
                    android:id="@+id/hideimg02"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/empty_photo"
                    android:scaleType="fitXY" />
                <ImageView
                    android:id="@+id/hideimg03"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/empty_photo"
                    android:scaleType="fitXY" />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/limit_img_area"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_above="@+id/input_area">

                <ImageView
                    android:id="@+id/limit_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/empty_photo"
                    android:scaleType="fitXY" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/img_list"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/limit_img"
                    android:orientation="horizontal" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/clear_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="-10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_above="@+id/img_list"
                    app:cardBackgroundColor="#ffffff"
                    app:cardCornerRadius="120dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/approval_fail" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="16dp"
                android:background="#F5F6F8" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pretendard_bold"
                    android:layout_alignParentStart="true"
                    android:text="대표공지"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pretendard_bold"
                    android:layout_alignParentEnd="true"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:text="*대표공지는 상단에 고정됩니다"
                    android:textColor="#1445D0"
                    android:textSize="13sp" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/select_fix"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="13dp"
                android:orientation="horizontal"
                android:background="@drawable/default_gray_round">
                <ImageView
                    android:id="@+id/select_fix_round"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_empty_round"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"/>
                <TextView
                    android:id="@+id/select_fix_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/pretendard_bold"
                    android:layout_gravity="center"
                    android:text="대표공지로 지정합니다"
                    android:textColor="#54585A"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/bottom_btn_box"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="73dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="31dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/work_save"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/new_blue"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="center"
                    android:text="공지 작성하기"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,TextContrastCheck" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/login_alert_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4D000000"
        android:clickable="false"
        android:visibility="gone">

        <ImageView
            android:id="@+id/loading_view"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            tools:ignore="ContentDescription" />
    </RelativeLayout>
</RelativeLayout>
