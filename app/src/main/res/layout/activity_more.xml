<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".ui.main.MainActivity"
    tools:ignore="UsingOnClickInXml">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--@+id/top_bar-->
        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="45dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:text="KOGAS"
                android:fontFamily="@font/inter_bold"
                android:textColor="#1483FE"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:id="@+id/notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@+id/out_store"
                android:onClick="btnOnclick"
                android:padding="5dp"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck">

                <androidx.cardview.widget.CardView
                    android:id="@+id/notice_cnt_y"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignEnd="@+id/bell_icon"
                    app:cardBackgroundColor="#FF0000"
                    app:cardCornerRadius="60dp" />

                <ImageView
                    android:id="@+id/bell_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/bell" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/out_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:onClick="btnOnclick"
                android:padding="5dp"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/out_store" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/top_bar"
            android:layout_above="@+id/bottom_navigation"
            android:orientation="vertical">
            <TextView
                android:id="@+id/setting_list01_txt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/applesdgothicneo"
                android:gravity="center|start"
                android:text="알림"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:visibility="gone"
                app:drawableEndCompat="@drawable/right_arrow_resize"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/setting_list02_txt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/applesdgothicneo"
                android:gravity="center|start"
                android:paddingTop="5dp"
                android:text="MY 프로필"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:drawableEndCompat="@drawable/right_arrow_resize"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/setting_list03_txt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/applesdgothicneo"
                android:gravity="center|start"
                android:paddingTop="5dp"
                android:text="알림 관리"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:drawableEndCompat="@drawable/right_arrow_resize"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/setting_list05_txt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/applesdgothicneo"
                android:gravity="center|start"
                android:paddingTop="5dp"
                android:text="현장확인"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:drawableEndCompat="@drawable/right_arrow_resize"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/setting_list06_txt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/applesdgothicneo"
                android:gravity="center|start"
                android:paddingTop="5dp"
                android:text="회원탈퇴"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:drawableEndCompat="@drawable/right_arrow_resize"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2"
                android:orientation="vertical" />
        </LinearLayout>
    </RelativeLayout>
    <include layout="@layout/bottom_navigation" />
</RelativeLayout>
