<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.contract.AddContractPage05"
    tools:ignore="HardcodedText,ImageContrastCheck,TextContrastCheck" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_alignParentTop="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="center"
                android:text="근로계약상세"
                android:textColor="#000000"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:id="@+id/back_btn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@drawable/find_right_arrow"
                    android:padding="20dp"
                    android:rotation="180"
                    tools:ignore="ImageContrastCheck" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="center"
                android:text="급여 기본사항"
                android:textColor="#000000"
                android:layout_margin="20dp"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="center"
                android:text="급여"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:background="@drawable/default_gray_round">
                <Spinner
                    android:id="@+id/pay_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pretendard_bold"
                    android:layout_toStartOf="@+id/down_arrow"/>

                <TextView
                    android:id="@+id/pay_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/pay_type"
                    android:layout_alignTop="@+id/pay_type"
                    android:layout_alignEnd="@+id/pay_type"
                    android:layout_alignBottom="@+id/pay_type"
                    android:background="@color/white"
                    android:gravity="start|center"
                    android:hint="급여지급방식"
                    android:textColor="#949494"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/down_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/down_arrow"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <EditText
                    android:id="@+id/payment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/payment_tv"
                    android:background="@drawable/default_gray_round"
                    android:hint="급여 액수를 입력해주세요"
                    android:inputType="number"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="#a9a9a9" />
                <TextView
                    android:id="@+id/payment_tv"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/white"
                    android:textColor="#949494"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"
                    android:text="원"
                    android:layout_alignBottom="@+id/pay_type"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pay_conference"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/pay_conference_round"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/resize_service_off"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/pay_conferencetv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/pay_conference_round"
                    android:drawableStart="@drawable/select_empty_round"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="center"
                    android:text="협의 가능"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#F5F6F8"/>

            <LinearLayout
                android:id="@+id/area05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:text="급여정산일"
                    android:textColor="#949494"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp">

                    <EditText
                        android:id="@+id/pay_loop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toStartOf="@+id/tv05"
                        android:background="@drawable/default_input_round"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="start|center"
                        android:hint="숫자만 입력"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxEms="10"
                        android:maxLength="10"
                        android:paddingStart="16dp"
                        android:paddingEnd="5dp"
                        android:textColor="#696969"
                        android:textColorHint="#a9a9a9"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText,TouchTargetSizeCheck" />
                    <TextView
                        android:id="@+id/tv05"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="일"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:textColor="#949494"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#F5F6F8"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="center"
                android:text="제공복지"
                android:textColor="#000000"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/bokji_box01"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal"
                    android:background="@drawable/grayback_gray_round">

                    <ImageView
                        android:id="@+id/bokji_round01"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:background="@drawable/ic_empty_round" />

                    <TextView
                        android:id="@+id/bokjitv01"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center"
                        android:text="식사제공"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bokji_box02"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal"
                    android:background="@drawable/grayback_gray_round">

                    <ImageView
                        android:id="@+id/bokji_round02"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:background="@drawable/ic_empty_round" />

                    <TextView
                        android:id="@+id/bokjitv02"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center"
                        android:text="4대보험"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bokji_box03"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal"
                    android:background="@drawable/grayback_gray_round">

                    <ImageView
                        android:id="@+id/bokji_round03"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:background="@drawable/ic_empty_round" />

                    <TextView
                        android:id="@+id/bokjitv03"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center"
                        android:text="교통비지원"
                        android:textColor="#000000"
                        android:textSize="15sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/bokji_box04"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal"
                    android:background="@drawable/grayback_gray_round">

                    <ImageView
                        android:id="@+id/bokji_round04"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:background="@drawable/ic_empty_round" />

                    <TextView
                        android:id="@+id/bokjitv04"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center"
                        android:text="인센티브"
                        android:textColor="#000000"
                        android:textSize="15sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:background="#F5F6F8"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:text="추가설명"
                android:textColor="#000000"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/input01"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/default_gray_round"
                android:fontFamily="@font/inter_regular"
                android:hint="ex) 야간 아르바이트의 경우 청소포함"
                android:inputType="text"
                android:paddingStart="20dp"
                android:textColor="#000000"
                android:textColorHint="#a9a9a9"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry,TouchTargetSizeCheck,TextContrastCheck" />

            <LinearLayout
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#6395EC"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="40dp"
                android:layout_marginEnd="20dp"
                android:layout_alignParentBottom="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="center"
                    android:text="다음으로 3/6"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
