<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/default_input_round"
    android:id="@+id/total_item"
    android:layout_marginBottom="10dp"
    tools:ignore="HardcodedText,RtlSymmetry">

    <RelativeLayout
        android:id="@+id/list_setting"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/name"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="4dp"
            android:layout_height="17dp"
            android:layout_centerInParent="true"
            android:background="@drawable/list_setting" />
    </RelativeLayout>

    <TextView
        android:id="@+id/comment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_setting"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="title"
        android:textColor="@color/black"
        android:textSize="18sp" />
    <androidx.cardview.widget.CardView
        android:id="@+id/profile_area"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/comment_title"
        android:layout_alignStart="@+id/comment_title"
        app:cardBackgroundColor="#dcdcdc"
        app:cardCornerRadius="60dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:scaleType="fitXY" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_area"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/profile_area"
        android:fontFamily="@font/pretendard_regular"
        android:text="name"
        android:textColor="@color/black"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/write_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_area"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:text="0000.00.00"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="14sp"
        android:textColor="#949494"/>


    <TextView
        android:id="@+id/comment_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_area"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/pretendard_regular"
        android:text="name"
        android:textColor="@color/black"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/comment_edityn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/comment_contents"
        android:layout_alignBottom="@+id/comment_contents"
        android:layout_toEndOf="@+id/comment_contents"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:fontFamily="@font/pretendard_regular"
        android:text="(수정됨)"
        android:textColor="#949494"
        android:textSize="12sp" />
</RelativeLayout>