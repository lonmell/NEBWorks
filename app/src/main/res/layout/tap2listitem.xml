<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_total"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/work_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/list_setting"
                android:layout_alignBottom="@+id/list_setting"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/approval_state"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="start|center"
                android:singleLine="true"
                android:text="제목"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <TextView
                android:id="@+id/approval_state"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/list_setting"
                android:layout_alignBottom="@+id/list_setting"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/list_setting"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="start|center"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <LinearLayout
                android:id="@+id/work_date_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/work_title"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/work_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="start|center"
                    android:singleLine="true"
                    android:text="0000.00.00 | 00:00 시작"
                    android:textColor="@color/new_blue"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <TextView
                    android:id="@+id/work_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="end|center"
                    android:singleLine="true"
                    android:layout_marginTop="5dp"
                    android:text="0000.00.00 | 00:00 마감"
                    android:textColor="#696969"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <TextView
                    android:id="@+id/member_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/member_img_array"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/pretendard_regular"
                    android:layout_marginTop="10dp"
                    android:text="000/000/000 외 3명"
                    android:textColor="#696969"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/member_img_array"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/work_title"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/work_date_info"
                android:layout_alignTop="@+id/work_date_info"
                android:layout_alignBottom="@+id/work_date_info"
                android:gravity="bottom|center"
                android:orientation="vertical">
                <!--                    <androidx.recyclerview.widget.RecyclerView-->
                <!--                        android:id="@+id/member_list"-->
                <!--                        android:layout_width="match_parent"-->
                <!--                        android:layout_height="match_parent"-->
                <!--                        android:layout_alignParentStart="true"-->
                <!--                        android:layout_marginStart="10dp"-->
                <!--                        android:layout_toStartOf="@+id/plus_add_membercnt" />-->
                <RelativeLayout
                    android:id="@+id/join_member_arae"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/workimg_url01"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_marginTop="5dp"
                        app:cardBackgroundColor="#EDEDED"
                        app:cardCornerRadius="60dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/white_plus" />

                            <ImageView
                                android:id="@+id/workimg1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/workimg_url02"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="5dp"
                        app:cardBackgroundColor="#EDEDED"
                        app:cardCornerRadius="60dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/white_plus" />

                            <ImageView
                                android:id="@+id/workimg2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/workimg_url03"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_marginStart="64dp"
                        android:layout_marginTop="5dp"
                        app:cardBackgroundColor="#EDEDED"
                        app:cardCornerRadius="60dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/white_plus" />

                            <ImageView
                                android:id="@+id/workimg3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/workimg_url04"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_marginStart="96dp"
                        android:layout_marginTop="5dp"
                        app:cardBackgroundColor="@color/new_blue"
                        app:cardCornerRadius="60dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/other_cnt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/pretendard_bold"
                                android:gravity="center"
                                android:text="+0"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/work_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/workimg_url"
                        android:layout_alignStart="@+id/workimg_url"
                        android:layout_alignEnd="@+id/workimg_url"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:singleLine="true"
                        android:text="name"
                        android:textColor="#696969"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/list_setting"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignTop="@+id/name"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:layout_width="4dp"
                    android:layout_height="17dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/list_setting" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DBDBDB"/>
</LinearLayout>

