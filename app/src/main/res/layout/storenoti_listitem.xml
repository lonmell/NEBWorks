<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DBDBDB" />

    <RelativeLayout
        android:id="@+id/area_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/fix_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/list_edit_area"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp"
            android:visibility="visible"
            android:layout_alignBottom="@+id/list_edit_area">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_fix_noti"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/list_edit_area"
            android:layout_alignBottom="@+id/list_edit_area"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/list_edit_area"
            android:layout_toEndOf="@+id/fix_icon"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="start|center"
            android:lines="1"
            android:singleLine="true"
            android:text="title"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <RelativeLayout
            android:id="@+id/list_edit_area"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp">

            <ImageView
                android:layout_width="4dp"
                android:layout_height="17dp"
                android:layout_centerInParent="true"
                android:background="@drawable/list_setting" />
        </RelativeLayout>

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@+id/writer_jikgup"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="start|center"
            android:singleLine="true"
            android:text="date"
            android:textColor="#949494"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/writer_jikgup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_alignEnd="@+id/list_edit_area"
            android:layout_alignTop="@+id/date"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="end|center"
            android:singleLine="true"
            android:text="직급"
            android:layout_marginEnd="20dp"
            android:textColor="@color/new_blue"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>
</LinearLayout>
