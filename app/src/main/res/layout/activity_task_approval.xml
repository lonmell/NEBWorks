<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:ignore="HardcodedText"
    tools:context=".ui.approval.TaskApprovalFragment">

    <!--@+id/top_bar-->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="59dp">

        <RelativeLayout
            android:id="@+id/back_btn"
            android:layout_width="59dp"
            android:layout_height="59dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/find_right_arrow"
                android:padding="20dp"
                android:rotation="180" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결재처리하기"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/inter_regular"
            android:textColor="@color/black" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/select_area"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/top_bar"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/change_place"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:cardBackgroundColor="#E0EAFB"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/change_place_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:gravity="start|center"
                        android:text="전체매장"
                        android:textColor="@color/blue" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/ic_page_move_arrow"
                        android:rotation="90" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/change_member"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginStart="15dp"
                app:cardBackgroundColor="#E0EAFB"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/change_member_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:gravity="start|center"
                        android:text="전체직원"
                        android:textColor="@color/blue" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/ic_page_move_arrow"
                        android:rotation="90" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/place_status2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/place_status"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/prev_date"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:gravity="center|start">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/find_right_arrow"
                        android:rotation="-180" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/setdate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="center"
                    android:text="0000년 00월 00일"
                    android:textColor="@color/black" />

                <RelativeLayout
                    android:id="@+id/next_date"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:gravity="center|end">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/find_right_arrow" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/change_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:clickable="false"
                    android:background="@drawable/calendar_resize" />
            </RelativeLayout>
        </RelativeLayout>

        <!-- TabLayou 을 배치한다. -->
        <LinearLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="#fff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tabTextColor="#696969"
            android:weightSum="4"
            tools:ignore="SpeakableTextPresentCheck">
                <LinearLayout
                    android:id="@+id/select01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/select01tv"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:text="전체"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:fontFamily="@font/pretendard_bold"
                        android:textColor="@color/blue"/>
                    <LinearLayout
                        android:id="@+id/select01line"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/blue"/>
                </LinearLayout>
            <LinearLayout
                android:id="@+id/select02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/select02tv"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:text="승인대기"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_bold"
                    android:textColor="#949494"/>
                <LinearLayout
                    android:id="@+id/select02line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/select03"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/select03tv"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:text="승인"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_bold"
                    android:textColor="#949494"/>
                <LinearLayout
                    android:id="@+id/select03line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/select04"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/select04tv"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:text="반려"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_bold"
                    android:textColor="#949494"/>
                <LinearLayout
                    android:id="@+id/select04line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/white"/>
            </LinearLayout>
        </LinearLayout>

        <!-- ViewPager2: 이 위치에 Fragment들이 노출된다. -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_area"
            android:layout_below="@+id/cnt_area"
            android:layout_marginBottom="20dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/total_applove_list1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/bottom_area"
                android:layout_below="@+id/cnt_area"
                android:layout_marginBottom="20dp"
                android:background="@drawable/loginbox_round"
                android:padding="10dp" />

            <TextView
                android:id="@+id/no_data_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/total_applove_list1"
                android:layout_alignTop="@+id/total_applove_list1"
                android:layout_alignEnd="@+id/total_applove_list1"
                android:layout_alignBottom="@+id/total_applove_list1"
                android:layout_marginStart="0dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="-1dp"
                android:gravity="center"
                android:text="결재요청 데이터가\n없습니다."
                android:textColor="#a9a9a9"
                android:textSize="22sp"
                android:visibility="gone"
                tools:ignore="HardcodedText" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
