<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ff0000"
    android:orientation="vertical"
    android:theme="@style/Theme.Kogas"
    tools:context=".ui.main.MainFragment"
    tools:ignore="HardcodedText,UsingOnClickInXml">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="center"
                    android:text="근무현황"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:id="@+id/back_btn2"
                    android:layout_width="45dp"
                    android:layout_height="45dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:background="@drawable/find_right_arrow"
                        android:padding="20dp"
                        android:rotation="180" />
                </RelativeLayout>
            </RelativeLayout>

            <!-- 참고 사이트 : https://bumjae.tistory.com/31 -->
            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/center_tap_coordinator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/frame_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="0dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <!-- TabLayou 을 배치한다. -->
                                <com.google.android.material.tabs.TabLayout
                                    android:id="@+id/tabLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:tabTextColor="#696969"
                                    tools:ignore="SpeakableTextPresentCheck" />

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/place_status2"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_below="@+id/place_status"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginEnd="20dp">

                                    <ImageView
                                        android:id="@+id/date_select"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginStart="10dp"
                                        android:background="@drawable/calendar"
                                        android:visibility="gone"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <LinearLayout
                                        android:id="@+id/date_layout"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:orientation="horizontal"
                                        android:visibility="visible"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent">

                                        <RelativeLayout
                                            android:id="@+id/prev_date"
                                            android:layout_width="40dp"
                                            android:layout_height="45dp"
                                            android:gravity="center|start">

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/down_arrow_blue"
                                                android:rotation="90" />
                                        </RelativeLayout>

                                        <TextView
                                            android:id="@+id/setdate"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:fontFamily="@font/pretendard_bold"
                                            android:gravity="center"
                                            android:text="0000년 00월 00일"
                                            android:textColor="@color/black"
                                            android:textSize="15sp" />

                                        <RelativeLayout
                                            android:id="@+id/next_date"
                                            android:layout_width="40dp"
                                            android:layout_height="45dp"
                                            android:gravity="center|end">

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/down_arrow_blue"
                                                android:rotation="-90" />
                                        </RelativeLayout>
                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="45dp"
                                        android:layout_height="45dp"
                                        android:layout_alignParentEnd="true"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent">

                                        <ImageView
                                            android:id="@+id/change_icon"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:background="@drawable/calendar_resize" />
                                    </RelativeLayout>
                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <LinearLayout
                                    android:id="@+id/status_select_area"
                                    android:layout_width="match_parent"
                                    android:layout_height="49dp"
                                    android:layout_below="@+id/place_status2"
                                    android:orientation="horizontal"
                                    android:weightSum="4">

                                    <LinearLayout
                                        android:id="@+id/status_fragmentbtn1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="45dp"
                                            android:layout_weight="1"
                                            android:fontFamily="@font/inter_regular"
                                            android:gravity="center"
                                            android:text="전체"
                                            android:textColor="#000000"
                                            android:textSize="16sp"
                                            tools:ignore="HardcodedText,NestedWeights" />

                                        <LinearLayout
                                            android:id="@+id/status_fragmentline1"
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:layout_weight="1"
                                            android:background="#8EB3FC"
                                            android:orientation="horizontal" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/status_fragmentbtn2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="45dp"
                                            android:layout_weight="1"
                                            android:fontFamily="@font/inter_regular"
                                            android:gravity="center"
                                            android:text="근무"
                                            android:textColor="#000000"
                                            android:textSize="16sp"
                                            tools:ignore="HardcodedText,NestedWeights" />

                                        <LinearLayout
                                            android:id="@+id/status_fragmentline2"
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:layout_weight="1"
                                            android:background="#ffffff"
                                            android:orientation="horizontal" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/status_fragmentbtn3"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="45dp"
                                            android:layout_weight="1"
                                            android:fontFamily="@font/inter_regular"
                                            android:gravity="center"
                                            android:text="미출근"
                                            android:textColor="#000000"
                                            android:textSize="16sp"
                                            tools:ignore="HardcodedText,NestedWeights" />

                                        <LinearLayout
                                            android:id="@+id/status_fragmentline3"
                                            android:layout_width="match_parent"
                                            android:layout_height="2dp"
                                            android:layout_weight="1"
                                            android:background="#ffffff"
                                            android:orientation="horizontal" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/status_fragmentbtn4"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="45dp"
                                            android:layout_weight="1"
                                            android:fontFamily="@font/inter_regular"
                                            android:gravity="center"
                                            android:text="휴무"
                                            android:textColor="#000000"
                                            android:textSize="16sp"
                                            tools:ignore="HardcodedText,NestedWeights" />

                                        <LinearLayout
                                            android:id="@+id/status_fragmentline4"
                                            android:layout_width="match_parent"
                                            android:layout_height="2dp"
                                            android:layout_weight="1"
                                            android:background="#ffffff"
                                            android:orientation="horizontal" />
                                    </LinearLayout>
                                </LinearLayout>

                                <com.krafte.nebworks.util.SwipeFrameLayout
                                    android:id="@+id/status_child_fragment_container"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_below="@+id/status_select_area">


                                </com.krafte.nebworks.util.SwipeFrameLayout>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>
                </FrameLayout>

                <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/appbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    app:elevation="0dp">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/main_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="0dp"
                        android:theme="@style/AppTheme"
                        app:contentInsetStart="0dp"
                        app:layout_scrollFlags="scroll|enterAlways">

                        <LinearLayout
                            android:id="@+id/best_feed_two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:elevation="0dp"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <RelativeLayout
                                android:id="@+id/title_area"
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:layout_below="@+id/top_bar"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp">

                                <LinearLayout
                                    android:id="@+id/title_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentStart="true"
                                        android:fontFamily="@font/pretendard_bold"
                                        android:gravity="start|center"
                                        android:text="관리중인 근무"
                                        android:textColor="@color/black"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="20dp"
                                    android:layout_toEndOf="@+id/title_tv"
                                    android:gravity="end">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/change_place"
                                        android:layout_width="150dp"
                                        android:layout_height="36dp"
                                        android:layout_gravity="center|end"
                                        app:cardBackgroundColor="@color/blue_200"
                                        app:cardCornerRadius="5dp"
                                        app:cardElevation="0dp">

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:minWidth="121dp">

                                            <TextView
                                                android:id="@+id/select_place"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_alignParentStart="true"
                                                android:layout_marginStart="10dp"
                                                android:layout_marginEnd="10dp"
                                                android:layout_toStartOf="@+id/down_arrow"
                                                android:fontFamily="@font/pretendard_bold"
                                                android:gravity="start|center"
                                                android:singleLine="true"
                                                android:text="매장선택"
                                                android:textColor="@color/new_blue" />

                                            <ImageView
                                                android:id="@+id/down_arrow"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentEnd="true"
                                                android:layout_centerVertical="true"
                                                android:layout_marginEnd="15dp"
                                                android:background="@drawable/ic_page_move_arrow"
                                                android:rotation="90" />
                                        </RelativeLayout>
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>

                            </RelativeLayout>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/place_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginBottom="20dp"
                                app:cardBackgroundColor="@color/blue_100"
                                app:cardCornerRadius="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="15dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:id="@+id/inout_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentStart="true"
                                            android:fontFamily="@font/pretendard_bold"
                                            android:gravity="center"
                                            android:text="오늘의 근무"
                                            android:textColor="@color/new_blue"
                                            android:textSize="16sp" />

                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/all_member_go"
                                            android:layout_width="69dp"
                                            android:layout_height="26dp"
                                            android:layout_alignParentEnd="true"
                                            android:layout_gravity="end"
                                            app:cardBackgroundColor="#97AEEB"
                                            app:cardCornerRadius="5dp"
                                            app:cardElevation="0dp">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:fontFamily="@font/inter_bold"
                                                android:gravity="center"
                                                android:text="전체 보기"
                                                android:textColor="@color/white"
                                                android:textSize="12sp" />
                                        </androidx.cardview.widget.CardView>
                                    </RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="20dp"
                                        android:orientation="vertical"
                                        android:weightSum="2">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="horizontal"
                                            android:weightSum="4">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_alignParentEnd="true"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/pretendard_bold"
                                                android:gravity="center"
                                                android:text="근무중"
                                                android:textColor="@color/new_blue"
                                                android:textSize="15sp" />

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_alignParentEnd="true"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/pretendard_bold"
                                                android:gravity="center"
                                                android:text="미출근"
                                                android:textColor="@color/new_blue"
                                                android:textSize="15sp" />

                                            <LinearLayout
                                                android:layout_width="1dp"
                                                android:layout_height="match_parent"
                                                android:background="#dbdbdb" />

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_alignParentEnd="true"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/pretendard_bold"
                                                android:gravity="center"
                                                android:text="퇴근"
                                                android:textColor="@color/new_blue"
                                                android:textSize="15sp" />

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_alignParentEnd="true"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/pretendard_bold"
                                                android:gravity="center"
                                                android:text="휴무"
                                                android:textColor="@color/new_blue"
                                                android:textSize="15sp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="40dp"
                                            android:layout_weight="1"
                                            android:orientation="horizontal"
                                            android:weightSum="4">

                                            <TextView
                                                android:id="@+id/cnt01"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_alignParentEnd="true"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/pretendard_bold"
                                                android:gravity="center|bottom"
                                                android:text="0"
                                                android:textColor="@color/new_blue"
                                                android:textSize="15sp" />

                                            <TextView
                                                android:id="@+id/cnt02"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_alignParentEnd="true"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/pretendard_bold"
                                                android:gravity="center|bottom"
                                                android:text="0"
                                                android:textColor="@color/red"
                                                android:textSize="15sp" />

                                            <LinearLayout
                                                android:layout_width="1dp"
                                                android:layout_height="match_parent"
                                                android:background="#dbdbdb" />

                                            <TextView
                                                android:id="@+id/cnt03"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_alignParentEnd="true"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/pretendard_bold"
                                                android:gravity="center|bottom"
                                                android:text="0"
                                                android:textColor="@color/new_blue"
                                                android:textSize="15sp" />

                                            <TextView
                                                android:id="@+id/cnt04"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_alignParentEnd="true"
                                                android:layout_weight="1"
                                                android:fontFamily="@font/pretendard_bold"
                                                android:gravity="center|bottom"
                                                android:text="0"
                                                android:textColor="@color/new_blue"
                                                android:textSize="15sp" />
                                        </LinearLayout>
                                    </LinearLayout>

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </androidx.appcompat.widget.Toolbar>
                </com.google.android.material.appbar.AppBarLayout>
            </androidx.coordinatorlayout.widget.CoordinatorLayout>

            <RelativeLayout
                android:id="@+id/login_alert_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4D000000"
                android:clickable="false"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/loading_view"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>
        </LinearLayout>

        <!--        <include-->
        <!--            android:id="@+id/add_btn"-->
        <!--            layout="@layout/addbtn" />-->
        <RelativeLayout
            android:id="@+id/calendar_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone">
            <RelativeLayout
                android:id="@+id/change_area"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/change_icon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/calendar_resize" />
            </RelativeLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/calender_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/change_area"
                android:background="@color/white" />
        </RelativeLayout>
    </RelativeLayout>

    <include layout="@layout/navbar" />
</androidx.drawerlayout.widget.DrawerLayout>
