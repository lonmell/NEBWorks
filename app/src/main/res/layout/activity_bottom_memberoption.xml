<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbox_round"
    android:orientation="vertical"
    tools:context=".bottomsheet.MemberOption">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/inter_bold"
            android:gravity="start|center"
            android:text="신규 직원 추가"
            android:textColor="#000000"
            android:textSize="25dp" />
        <LinearLayout
            android:id="@+id/cancel"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">
            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/ic_close_gray"
                android:layout_centerVertical="true"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/invate_add"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/certi02"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_contact_icon" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/certi02"
            android:layout_alignTop="@+id/certi02"
            android:layout_alignBottom="@+id/certi02"
            android:layout_marginStart="15dp"
            android:orientation="vertical"
            android:weightSum="2">
            <TextView
                android:id="@+id/selecttv02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="초대하기"
                android:gravity="center|start"
                android:textSize="18sp"
                android:fontFamily="@font/gangwonedu_bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/selecttv02_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="직원을 초대해 기본정보를 입력합니다"
                android:gravity="top|start"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="15sp"
                android:textColor="#a9a9a9"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/directly_add"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_marginTop="5dp"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/certi01"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_icon_report" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/certi01"
                android:layout_alignTop="@+id/certi01"
                android:layout_alignBottom="@+id/certi01"
                android:layout_marginStart="15dp"
                android:orientation="vertical"
                android:weightSum="2">
                    <TextView
                        android:id="@+id/selecttv01"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="직접 등록하기"
                        android:gravity="center|start"
                        android:textSize="18sp"
                        android:fontFamily="@font/gangwonedu_bold"
                        android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/selecttv01_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="직원정보를 입력해 직접 등록합니다"
                    android:gravity="top|start"
                    android:fontFamily="@font/pretendard_regular"
                    android:textSize="15sp"
                    android:textColor="#a9a9a9"/>
            </LinearLayout>
    </RelativeLayout>

</LinearLayout>