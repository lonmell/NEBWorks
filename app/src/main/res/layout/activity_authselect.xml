<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8EB3FC"
    tools:context=".ui.member.AuthSelectActivity">

    <ImageView
        android:id="@+id/top_icon"
        android:layout_width="275dp"
        android:layout_height="46dp"
        android:layout_above="@+id/select_area"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="66dp"
        android:background="@drawable/ic_logo_inauthselect" />

    <LinearLayout
        android:id="@+id/select_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/go_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="17dp"
            android:background="@drawable/ic_auth_select01"/>

        <ImageView
            android:id="@+id/go_worker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_auth_select02"/>

    </LinearLayout>

</RelativeLayout>