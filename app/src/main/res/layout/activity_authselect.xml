<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.member.AuthSelectActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/auth_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/select_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFF4FD"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/app_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="로그인을 진행해주세요"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@id/go_owner"
                    app:layout_constraintStart_toStartOf="@id/go_owner" />

                <ImageView
                    android:id="@+id/top_icon"
                    android:layout_width="120dp"
                    android:layout_height="20dp"
                    android:layout_above="@+id/select_area"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/ic_logo_inauthselect"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/logout"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/top_icon"
                    app:layout_constraintBottom_toBottomOf="@id/top_icon"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_logout"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/go_owner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="120dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/owner_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/owner_icon_box"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#EFF4FD"
                            app:cardCornerRadius="60dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="15dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <ImageView
                                android:id="@+id/owner_icon"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_place"
                                />
                        </androidx.cardview.widget.CardView>


                        <LinearLayout
                            android:id="@+id/owner_content_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/owner_icon_box"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/owner_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="사장님!"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                app:layout_constraintStart_toEndOf="@id/owner_icon_box"
                                app:layout_constraintTop_toTopOf="@id/owner_icon_box" />

                            <TextView
                                android:id="@+id/owner_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="사업장을 등록해서 스마트한\n매장관리를 시작해보세요!"
                                android:textSize="12sp"
                                app:layout_constraintStart_toStartOf="@id/owner_title"
                                app:layout_constraintTop_toBottomOf="@id/owner_title" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="34dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginBottom="16dp"
                                app:cardCornerRadius="5dp"
                                app:layout_constraintStart_toStartOf="@id/owner_content"
                                app:layout_constraintTop_toBottomOf="@id/owner_content">

                                <Button
                                    android:id="@+id/owner_button"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#6395EC"
                                    android:fontFamily="@font/inter_bold"
                                    android:drawableEnd="@drawable/ic_button_icon"
                                    android:gravity="start|center"
                                    android:paddingHorizontal="8dp"
                                    android:text="사업장 등록하기"
                                    android:textColor="@color/white"
                                    android:textSize="11sp"
                                    tools:ignore="DuplicateClickableBoundsCheck" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/go_worker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="30dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/go_owner">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/worker_icon_box"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#EFF4FD"
                            app:cardCornerRadius="60dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="15dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <ImageView
                                android:id="@+id/worker_icon"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_staff"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:id="@+id/worker_content_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/worker_icon_box"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/worker_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="근무자님!"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                app:layout_constraintStart_toEndOf="@id/worker_icon_box"
                                app:layout_constraintTop_toTopOf="@id/worker_icon_box" />

                            <TextView
                                android:id="@+id/worker_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="지금 바로 매장에 들어가\n근무를 시작해보세요!"
                                android:textSize="12sp"
                                app:layout_constraintStart_toStartOf="@id/worker_title"
                                app:layout_constraintTop_toBottomOf="@id/worker_title" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="34dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginBottom="16dp"
                                app:cardCornerRadius="5dp"
                                app:layout_constraintStart_toStartOf="@id/worker_content"
                                app:layout_constraintTop_toBottomOf="@id/worker_content">

                                <Button
                                    android:id="@+id/worker_button"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#6395EC"
                                    android:fontFamily="@font/inter_bold"
                                    android:drawableEnd="@drawable/ic_button_icon"
                                    android:gravity="start|center"
                                    android:paddingHorizontal="8dp"
                                    android:text="근무하기"
                                    android:textColor="@color/white"
                                    android:textSize="11sp" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/analyze_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/select_area">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/community_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/analyze_layout">

                <ImageView
                    android:id="@+id/community_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_community_off"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/community_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:text="인기 커뮤니티 글"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/community_icon"
                    app:layout_constraintStart_toEndOf="@id/community_icon"
                    app:layout_constraintTop_toTopOf="@id/community_icon" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/community_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/community_title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="80dp"/>

                <TextView
                    android:id="@+id/no_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/community_recyclerView"
                    app:layout_constraintStart_toStartOf="@id/community_recyclerView"
                    app:layout_constraintEnd_toEndOf="@id/community_recyclerView"
                    android:layout_alignTop="@+id/community_recyclerView"
                    android:layout_alignBottom="@+id/community_recyclerView"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="게시글이 없습니다."
                    android:textColor="#dcdcdc"
                    android:textSize="22sp"
                    android:visibility="gone"
                    tools:ignore="HardcodedText" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- TabLayout 을 배치한다. -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/top_bar"
        android:background="#fff"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabTextColor="#696969"
        tools:ignore="SpeakableTextPresentCheck" />

    <!-- ViewPager2: 이 위치에 Fragment 들이 노출된다. -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_bar"
        android:visibility="gone"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="70dp">
    </androidx.viewpager2.widget.ViewPager2>

    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>