<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/search_area"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/title"
        android:layout_margin="20dp"
        android:background="@drawable/default_input_round"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/store_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:padding="5dp">

            <EditText
                android:id="@+id/search_category"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="11dp"
                android:layout_marginEnd="16dp"
                android:layout_toStartOf="@+id/search_btn"
                android:background="@null"
                android:hint="검색하기"
                android:importantForAutofill="no"
                android:inputType="text"
                android:singleLine="false"
                android:textColor="#000000"
                android:textColorHint="#696969"
                tools:ignore="HardcodedText,RtlSymmetry,TouchTargetSizeCheck" />

            <LinearLayout
                android:id="@+id/search_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:padding="5dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_search"
                    android:fontFamily="@font/applesdgothicneo"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/ad_area"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#f2f2f2"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/inter_bold"
            android:text="인기게시글"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/more01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더보기 >"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_marginStart="15dp"
            android:textColor="#949494"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/inter_bold"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/best_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="50dp"
        android:background="#F5F6F8"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/inter_bold"
        android:text="전체게시글"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/all_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>
</LinearLayout>