<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".pop.SelectTaskDatePop">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_alignParentTop="true"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:background="@drawable/find_right_arrow"
                android:rotation="180"
                tools:ignore="UsingOnClickInXml,TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/inter_bold"
                android:text="시작 일시 선택"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작 날짜 선택"
            android:textSize="26sp"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#F5F6F8"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/select_datetv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="날짜를 선택해주세요"
                android:fontFamily="@font/inter_bold"
                android:textColorHint="#949494"
                android:textColor="@color/black"
                android:gravity="center|start"
                android:layout_marginStart="20dp"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/place_status2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/place_status"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/prev_date"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:gravity="center|start">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/find_right_arrow"
                        android:rotation="-180" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/setdate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:text="0000년 00월"
                    android:textColor="@color/black" />

                <RelativeLayout
                    android:id="@+id/next_date"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:gravity="center|end">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/find_right_arrow" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/create_calender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#F5F6F8"
            android:orientation="horizontal" />
        <TextView
            android:id="@+id/title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작 시간 입력"
            android:textSize="26sp"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#F5F6F8"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/select_timetv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="시간을 선택해주세요"
                android:fontFamily="@font/inter_bold"
                android:textColorHint="#949494"
                android:gravity="center|start"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/savetime_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="55dp"
            android:background="@color/blue"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="34dp"
            android:layout_marginEnd="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="저장"
                android:gravity="center"
                android:textSize="16sp"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>