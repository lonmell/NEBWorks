<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    tools:context=".ui.user.ProfileEditActivity"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:text="MY"
                android:textColor="#000000"
                android:textSize="17sp" />

            <RelativeLayout
                android:id="@+id/back_btn"
                android:layout_width="45dp"
                android:layout_height="45dp">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@drawable/back_btn" />
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a9a9a9" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:id="@+id/profile_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="#dcdcdc"
                        app:cardElevation="0dp">
                        <ImageView
                            android:id="@+id/profile_setimg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="0dp"
                            android:layout_margin="0dp"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/img_plus"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_centerInParent="true"
                            android:background="@drawable/white_plus" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/clear_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:cardElevation="0dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    app:cardBackgroundColor="#ffffff"
                    app:cardCornerRadius="120dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/approval_fail" />
                </androidx.cardview.widget.CardView>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/select01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    내부직원"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    app:drawableStartCompat="@drawable/resize_service_off" />
                <TextView
                    android:id="@+id/select02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    외부협력체 직원"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    app:drawableStartCompat="@drawable/resize_service_off" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성명"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/inter_regular"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/inter_regular"
            android:hint="성명을 입력해주세요"
            android:textColor="#000000"
            android:layout_marginStart="20dp"
            android:textColorHint="#a9a9a9"
            android:background="#ffffff"
            android:inputType="text"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a9a9a9"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="부서"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/inter_regular"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/user_buseo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/inter_regular"
            android:hint="부서를 입력해주세요"
            android:textColor="#000000"
            android:layout_marginStart="20dp"
            android:textColorHint="#a9a9a9"
            android:background="#ffffff"
            android:inputType="text"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a9a9a9"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="직책"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/inter_regular"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/user_jikchk"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/inter_regular"
            android:hint="직책을 입력해주세요"
            android:textColor="#000000"
            android:layout_marginStart="20dp"
            android:textColorHint="#a9a9a9"
            android:background="#ffffff"
            android:inputType="text"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a9a9a9"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사번"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/inter_regular"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/user_sabeon"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/inter_regular"
            android:hint="직책을 입력해주세요"
            android:textColor="#000000"
            android:layout_marginStart="20dp"
            android:textColorHint="#a9a9a9"
            android:background="#ffffff"
            android:inputType="text"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a9a9a9"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/SaveUserBtn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="60dp"
        android:background="#244A9C">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:text="저장"
            android:textColor="#ffffff"
            android:textSize="20sp"
            tools:ignore="HardcodedText,TextContrastCheck" />

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/login_alert_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4D000000"
        android:visibility="gone"
        android:clickable="false">

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            app:cardElevation="0dp"
            app:cardCornerRadius="120dp"
            app:cardBackgroundColor="#ffffff">
            <ImageView
                android:id="@+id/loading_view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</RelativeLayout>