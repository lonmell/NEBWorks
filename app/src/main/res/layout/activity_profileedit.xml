<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    tools:context=".ui.user.ProfileEditActivity"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:text=""
                android:textColor="#000000"
                android:textSize="17sp" />

            <RelativeLayout
                android:id="@+id/back_btn"
                android:layout_width="45dp"
                android:layout_height="45dp">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:rotation="180"
                    android:background="@drawable/find_right_arrow" />
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a9a9a9" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp">

                <RelativeLayout
                    android:id="@+id/profile_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="#dcdcdc"
                        app:cardElevation="0dp">
                        <ImageView
                            android:id="@+id/profile_setimg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="0dp"
                            android:layout_margin="0dp"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/img_plus"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_centerInParent="true"
                            android:background="@drawable/certi01" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/clear_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:cardElevation="0dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    app:cardBackgroundColor="#ffffff"
                    app:cardCornerRadius="120dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/approval_fail" />
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성명"
                android:textSize="16sp"
                android:fontFamily="@font/inter_regular"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(필수)"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/inter_regular"
                android:textColor="#dbdbdb"/>
        </LinearLayout>

        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/inter_regular"
            android:hint="성명을 입력해주세요"
            android:textColor="#000000"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textColorHint="#a9a9a9"
            android:paddingStart="15dp"
            android:background="@drawable/default_gray_round"
            android:inputType="text"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별"
                android:textColor="#696969"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(선택)"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/inter_regular"
                android:textColor="#dbdbdb"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/select_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f2f2f2"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/man_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="남자"
                    android:textColor="#A1887F"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/select_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f2f2f2"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/woman_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="여자"
                    android:textColor="#A1887F"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textSize="16sp"
                android:fontFamily="@font/inter_regular"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(선택)"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/inter_regular"
                android:textColor="#dbdbdb"/>
        </LinearLayout>

        <EditText
            android:id="@+id/user_nick"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/inter_regular"
            android:hint="닉네임을 입력해주세요"
            android:textColor="#000000"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:textColorHint="#a9a9a9"
            android:paddingStart="15dp"
            android:background="@drawable/default_gray_round"
            android:inputType="text"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:textSize="16sp"
                android:fontFamily="@font/inter_regular"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(필수)"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/inter_regular"
                android:textColor="#dbdbdb"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toTopOf="@+id/linear02"
            app:layout_constraintTop_toBottomOf="@+id/tv02">

            <EditText
                android:id="@+id/user_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/default_gray_round"
                android:fontFamily="@font/applesdgothicneo"
                android:hint="'-'제외 휴대폰 번호"
                android:importantForAutofill="no"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:textColorHint="#949494"
                android:textSize="16sp"
                tools:ignore="HardcodedText,TouchTargetSizeCheck,TextContrastCheck" />

            <androidx.cardview.widget.CardView
                android:id="@+id/get_auth_result"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="2"
                app:cardBackgroundColor="#6395EC"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tv03"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:text="인증번호 전송"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    tools:ignore="TextContrastCheck" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear02"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintBottom_toTopOf="@+id/linear03"
            app:layout_constraintTop_toBottomOf="@+id/input04">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/edit_confirm_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/default_gray_round"
                    android:fontFamily="@font/applesdgothicneo"
                    android:hint="인증번호 입력"
                    android:importantForAutofill="no"
                    android:inputType="textEmailAddress"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#949494"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,TouchTargetSizeCheck,TextContrastCheck" />

                <TextView
                    android:id="@+id/confirm_num_counting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/applesdgothicneo"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:gravity="center|start"
                    android:text="00:00"
                    android:textColor="#d9d9d9"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/linear03"
                    app:layout_constraintTop_toBottomOf="@+id/linear02"
                    tools:ignore="HardcodedText,TextContrastCheck" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="2"
                app:cardBackgroundColor="#f2f2f2"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/confirm_phone_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:text="인증번호 확인"
                    android:textColor="#a9a9a9"
                    android:textSize="16sp"
                    tools:ignore="TextContrastCheck" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/SaveUserBtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="50dp"
            app:cardBackgroundColor="@color/blue"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:text="저장"
                android:textColor="#ffffff"
                android:textSize="20sp"
                tools:ignore="HardcodedText,TextContrastCheck" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/login_alert_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4D000000"
        android:visibility="gone"
        android:clickable="false">

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            app:cardElevation="0dp"
            app:cardCornerRadius="120dp"
            app:cardBackgroundColor="#ffffff">
            <ImageView
                android:id="@+id/loading_view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</RelativeLayout>