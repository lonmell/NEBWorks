<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".ui.member.AdddirectlyMember">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="59dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="center"
                android:text="직원등록"
                android:textColor="#000000"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:id="@+id/back_btn"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/find_right_arrow"
                    android:rotation="180" />
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기본정보"
            android:textSize="28sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/gangwonedu_bold"
            android:textColor="@color/black"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/select_place"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_below="@+id/close_btn"
            android:layout_marginStart="16dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="15dp"
            android:padding="5dp"
            app:cardBackgroundColor="@color/new_blue"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toStartOf="@+id/refresh_area"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/store_name"
                        android:fontFamily="@font/pretendard_regular"
                        android:gravity="start|center"
                        android:text="현재 선택된 매장"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/store_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gangwonedu_bold"
                        android:gravity="start|center"
                        android:text="store_name"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/refresh_area"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/refresh_btn"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/ic_refresh_btn_white"
                        android:scaleType="fitXY" />
                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/area01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:gravity="start|center"
                android:text="이름"
                android:textColor="#949494"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/inputbox01"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/default_input_round"
                android:fontFamily="@font/inter_regular"
                android:gravity="start|center"
                android:hint="이름입력"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:maxEms="10"
                android:maxLength="10"
                android:paddingStart="16dp"
                android:paddingEnd="5dp"
                android:textColor="@color/black"
                android:textColorHint="#a9a9a9"
                android:textSize="17sp"
                tools:ignore="HardcodedText,TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/area02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:gravity="start|center"
                android:text="연락처"
                android:textColor="#949494"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/inputbox02"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/default_input_round"
                android:fontFamily="@font/inter_regular"
                android:gravity="start|center"
                android:hint="숫자만 입력"
                android:importantForAutofill="no"
                android:inputType="phone"
                android:maxEms="13"
                android:maxLength="13"
                android:paddingStart="16dp"
                android:paddingEnd="5dp"
                android:textColor="@color/black"
                android:textColorHint="#a9a9a9"
                android:textSize="17sp"
                tools:ignore="HardcodedText,TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/area03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:gravity="start|center"
                android:text="주민등록번호"
                android:textColor="#949494"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/inputbox03"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/default_input_round"
                android:fontFamily="@font/inter_regular"
                android:gravity="start|center"
                android:hint="숫자만 입력"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxEms="15"
                android:maxLength="15"
                android:paddingStart="16dp"
                android:paddingEnd="5dp"
                android:textColor="@color/black"
                android:textColorHint="#a9a9a9"
                android:textSize="17sp"
                tools:ignore="HardcodedText,TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/area04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:gravity="start|center"
                android:text="입사일자"
                android:textColor="#949494"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/inputbox04"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/default_input_round"
                android:fontFamily="@font/inter_regular"
                android:gravity="start|center"
                android:hint="YY-MM-DD"
                android:maxEms="10"
                android:maxLength="10"
                android:paddingStart="16dp"
                android:paddingEnd="5dp"
                android:textColor="@color/black"
                android:textColorHint="#a9a9a9"
                android:textSize="17sp"
                tools:ignore="HardcodedText,TouchTargetSizeCheck" />

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/addMemberBtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="86dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            app:cardBackgroundColor="@color/new_blue"
            app:cardCornerRadius="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="center"
                android:text="등록하기"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:ignore="HardcodedText,TextContrastCheck" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
