<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user.UserPlaceMapActivity"
    tools:ignore="HardcodedText">

    <RelativeLayout
        android:id="@+id/top_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_area"
        android:orientation="vertical">
        <!--@+id/top_bar-->
        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentTop="true">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:text="KOGAS"
                android:fontFamily="@font/inter_bold"
                android:textColor="#1483FE"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:id="@+id/notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@+id/out_store"
                android:onClick="btnOnclick"
                android:padding="5dp"
                tools:ignore="OnClick,SpeakableTextPresentCheck,TouchTargetSizeCheck">

                <androidx.cardview.widget.CardView
                    android:id="@+id/notice_cnt_y"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignEnd="@+id/bell_icon"
                    app:cardBackgroundColor="#FF0000"
                    app:cardCornerRadius="60dp" />

                <ImageView
                    android:id="@+id/bell_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/bell" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/out_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:padding="5dp"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/out_store" />
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/top_bar"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="#a9a9a9" />

        <LinearLayout
            android:id="@+id/mylocation"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/loginbox_round"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/my_location" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="12dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/time_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000000"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="16sp"
            android:visibility="gone"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/inter_bold"
            android:text="작업장과의 거리 : "
            android:textColor="#696969"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lon_lat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/inter_bold"
            android:text="현재 위도경도"
            android:textColor="#a9a9a9"
            android:visibility="gone"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/inter_bold"
            android:text="매장 도착 후 작업시작 버튼을 눌러주세요."
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/inter_bold"
            android:text="관리자가 지정한 지역 내에서만 작업처리가 가능합니다."
            android:textColor="#000000"
            android:textSize="11sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="#1483FE"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/select_workse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:text="작업시작"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/close_area"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="28dp"
            app:cardBackgroundColor="#8EB3FC"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/close"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:text="확인"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/login_alert_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6B000000"
        android:clickable="false"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:id="@+id/check_area"
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="#00ff0000"
            app:cardCornerRadius="120dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/loading_view"
                android:layout_width="101dp"
                android:layout_height="101dp"
                android:layout_gravity="center"
                android:background="@drawable/check_blank"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/check_area"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:text="작업 시작합니다"
            android:textColor="@color/black"
            android:textSize="25sp" />

    </RelativeLayout>
</RelativeLayout>