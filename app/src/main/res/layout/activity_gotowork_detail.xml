<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--@+id/top_bar-->
            <RelativeLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/menu"
                    android:onClick="btnOnclick"
                    tools:ignore="UsingOnClickInXml,TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/notice"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:layout_toStartOf="@+id/out_store"
                    android:background="@drawable/bell" />

                <ImageView
                    android:id="@+id/out_store"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/out_store" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="27dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="사용자 이름"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/user_in_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_name"
                    android:layout_alignStart="@+id/user_name"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="start"
                    android:text="0000.00.00 부터"
                    android:textColor="#696969"
                    android:textSize="13sp"
                    tools:ignore="HardcodedText,SmallSp" />

                <TextView
                    android:id="@+id/detail_txt01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_in_date"
                    android:layout_alignStart="@+id/user_name"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="start"
                    android:text="근무시간"
                    android:textColor="#696969"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,SmallSp" />

                <ImageView
                    android:id="@+id/detail_img01"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignBottom="@+id/detail_txt01"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/detail_txt01"
                    android:background="@drawable/detail_time" />

                <TextView
                    android:id="@+id/detail_time01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/detail_txt01"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="24dp"
                    android:layout_toStartOf="@+id/detail_settingwork"
                    android:layout_toEndOf="@+id/detail_img01"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="start"
                    android:text="0h 0m"
                    android:textColor="#696969"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,SmallSp" />


                <LinearLayout
                    android:id="@+id/detail_settingwork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/detail_time02"
                    android:layout_alignBottom="@+id/detail_txt01"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_bold"
                        android:gravity="start"
                        android:text="근로설정"
                        android:textColor="#696969"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="invisible"
                        tools:ignore="HardcodedText,SmallSp" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:background="@drawable/right_arrow"
                        android:visibility="invisible" />
                </LinearLayout>


                <ProgressBar
                    android:id="@+id/detail_time02"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_below="@+id/detail_txt01"
                    android:layout_alignStart="@+id/detail_txt01"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/user_img_round"
                    android:progressDrawable="@drawable/custom_progressbar" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/user_img_round"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_above="@+id/detail_status"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="17dp"
                    app:cardCornerRadius="60dp">

                    <ImageView
                        android:id="@+id/user_img"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/certi01"
                        tools:ignore="ImageContrastCheck" />

                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/detail_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/detail_time02"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="17dp"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="start"
                    android:text="아르바이트"
                    android:textColor="#696969"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,SmallSp" />

                <TextView
                    android:id="@+id/detail_status2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_status"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="17dp"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="start"
                    android:text="근무 중"
                    android:textColor="#5B93FF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,SmallSp,TextContrastCheck" />

                <TextView
                    android:id="@+id/payment_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_time02"
                    android:layout_alignStart="@+id/detail_time02"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="start"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,SmallSp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/payment_txt"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/payment_txt"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="start"
                    android:text="원"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,SmallSp" />
            </RelativeLayout>

            <!--직원설정-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="horizontal">
                <!--@+id/member_setting-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/member_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="#6395EC"
                    app:cardCornerRadius="20dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/arrow01"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/detail_white_arrow"
                            tools:ignore="ImageContrastCheck" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_toEndOf="@+id/arrow01"
                            android:fontFamily="@font/inter_bold"
                            android:gravity="center"
                            android:text="근무설정"
                            android:textColor="#ffffff"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,SmallSp,TextContrastCheck" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <!--@+id/member_call-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/member_call"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="#6395EC"
                    app:cardCornerRadius="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@drawable/member_call_round"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/arrow02"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/detail_white_blue"
                            tools:ignore="ImageContrastCheck" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_toEndOf="@+id/arrow02"
                            android:fontFamily="@font/inter_bold"
                            android:gravity="center"
                            android:text="전화걸기"
                            android:textColor="#6395EC"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,SmallSp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <!--@+id/member_call-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/member_contract"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="#696969"
                    app:cardCornerRadius="20dp">

                    <RelativeLayout
                        android:id="@+id/member_contract_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@drawable/member_contract"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/arrow03"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/detail_white_gray" />

                        <TextView
                            android:id="@+id/contract_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_toEndOf="@+id/arrow03"
                            android:fontFamily="@font/inter_bold"
                            android:gravity="center"
                            android:text="근로계약서"
                            android:textColor="#696969"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,SmallSp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <!--직원설정-->

            <!--오늘 남은 업무량-->
            <androidx.cardview.widget.CardView
                android:id="@+id/placework_go"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/inter_bold"
                        android:gravity="start"
                        android:text="오늘 남은 업무량"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,SmallSp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/inter_bold"
                            android:gravity="start"
                            android:text="미완료"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,SmallSp" />

                        <TextView
                            android:id="@+id/notend_work"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/inter_bold"
                            android:gravity="start"
                            android:text="0"
                            android:textColor="#8EB3FC"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,SmallSp,TextContrastCheck" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/inter_bold"
                            android:gravity="start"
                            android:text="완료"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,SmallSp" />

                        <TextView
                            android:id="@+id/end_work"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/inter_bold"
                            android:gravity="start"
                            android:text="0"
                            android:textColor="#8EB3FC"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,SmallSp,TextContrastCheck" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--오늘 남은 업무량-->

            <!--업무 결재 현황-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/inter_bold"
                        android:gravity="start"
                        android:text="업무 결재 현황"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,SmallSp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:id="@+id/approval1_go"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_bold"
                                android:gravity="start"
                                android:text="요청"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText,SmallSp" />

                            <TextView
                                android:id="@+id/approval1_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_bold"
                                android:gravity="start"
                                android:text="0"
                                android:textColor="#8EB3FC"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText,SmallSp,TextContrastCheck" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/approval2_go"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_bold"
                                android:gravity="start"
                                android:text="승인"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText,SmallSp" />

                            <TextView
                                android:id="@+id/approval2_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_bold"
                                android:gravity="start"
                                android:text="0"
                                android:textColor="#8EB3FC"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText,SmallSp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/approval3_go"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_bold"
                                android:gravity="start"
                                android:text="반려"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText,SmallSp" />

                            <TextView
                                android:id="@+id/approval3_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/inter_bold"
                                android:gravity="start"
                                android:text="0"
                                android:textColor="#8EB3FC"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText,SmallSp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--업무 결재 현황-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/goto_list_icon"
                        tools:ignore="ImageContrastCheck" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/select03"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:id="@+id/selectdate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#6395EC"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="  0000  "
                            android:textColor="#ffffff"
                            android:textSize="16sp"
                            app:drawableStartCompat="@drawable/white_calendar_resize" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/minus_week"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/week_left_arrow" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/search_weekMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="start|center"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="6월"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:ignore="HardcodedText" />

                    <LinearLayout
                        android:id="@+id/plus_week"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/week_right_arrow" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/weekend_gotolist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:nestedScrollingEnabled="false" />

                <TextView
                    android:id="@+id/no_data_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
