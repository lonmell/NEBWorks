<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".ui.paymanagement.PayManagementActivity"
    tools:ignore="HardcodedText">

    <!--@+id/top_bar-->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_alignParentTop="true"
        android:background="#ffffff">
        <RelativeLayout
            android:id="@+id/back_btn"
            android:layout_width="59dp"
            android:layout_alignParentStart="true"
            android:layout_height="59dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:background="@drawable/find_right_arrow"
                android:rotation="180"
                tools:ignore="UsingOnClickInXml,TouchTargetSizeCheck,SpeakableTextPresentCheck" />
        </RelativeLayout>


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/pretendard_bold"
            android:text="전체 급여 관리"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/select_date_area"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/select_area"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <RelativeLayout
            android:id="@+id/date_select"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/calendar_resize" />
        </RelativeLayout>

        <LinearLayout
            android:id="@id/date_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_centerVertical="true">

            <RelativeLayout
                android:id="@+id/prev_date"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:gravity="center|start">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/find_right_arrow"
                    android:rotation="-180" />
            </RelativeLayout>

            <TextView
                android:id="@+id/setdate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="center"
                android:text="0000년 00월"
                android:textSize="20sp"
                android:textColor="@color/black" />

            <RelativeLayout
                android:id="@+id/next_date"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:gravity="center|end">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/find_right_arrow" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/change_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/calendar_resize" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/allpay_employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/select_area"
            android:fontFamily="@font/pretendard_bold"
            android:text="총 0원"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/select_area"
            android:layout_width="140dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:id="@+id/change_place"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/blue_200"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/change_place_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="3dp"
                        android:layout_toStartOf="@+id/check_btn"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="start|center"
                        android:singleLine="true"
                        android:text="전체매장"
                        android:textColor="@color/new_blue" />

                    <ImageView
                        android:id="@+id/check_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/ic_full_round_check"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>




    <!-- TabLayou 을 배치한다. -->
    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/select01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/select01tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/line01"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="급여 현황 및 작성" />
            <LinearLayout
                android:id="@+id/line01"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/new_blue"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/select02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/select02tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/line01"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="급여명세" />
            <LinearLayout
                android:id="@+id/line02"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:ignore="HardcodedText,ContentDescription">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/all_memberlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="#ffffff" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/login_alert_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4D000000"
            android:clickable="false"
            android:visibility="gone">

            <ImageView
                android:id="@+id/loading_view"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                tools:ignore="ContentDescription" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/nodata_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="#ffffff"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="350dp"
                android:layout_height="212dp"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:background="@drawable/ic_first_pay_btn" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/calendar_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/status_select_area"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/calender_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
