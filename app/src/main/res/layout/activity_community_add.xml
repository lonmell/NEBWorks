<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.community.CommunityAddActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="NestedWeights">

                <TextView
                    android:id="@+id/invate_code_input"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_alignTop="@+id/back_btn"
                    android:layout_alignBottom="@+id/back_btn"
                    android:fontFamily="@font/applesdgothicneo"
                    android:gravity="center"
                    android:paddingStart="30dp"
                    android:text="커뮤니티"
                    android:textColor="#696969"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <LinearLayout
                    android:id="@+id/back_btn"
                    android:layout_width="59dp"
                    android:layout_height="59dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    tools:ignore="RtlSymmetry">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/find_right_arrow"
                        android:padding="20dp"
                        android:rotation="180" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/top_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/invate_code_input"
                    android:background="#f2f2f2" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="26dp"
                android:paddingBottom="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gangwonedu_bold"
                    android:gravity="start"
                    android:text="게시글 작성"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    tools:ignore="HardcodedText,TextContrastCheck" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="start"
                    android:text="제목"
                    android:layout_marginTop="21dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,TextContrastCheck" />

                <EditText
                    android:id="@+id/write_title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/default_input_round"
                    android:hint="제목을 작성해주세요"
                    android:paddingStart="15dp"
                    android:textColor="@color/black"
                    android:inputType="text"
                    android:layout_marginTop="4dp"
                    android:textColorHint="#a9a9a9"
                    tools:ignore="HardcodedText,RtlSymmetry,TextContrastCheck"
                    android:autofillHints=""
                    android:importantForAutofill="no" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="start"
                    android:text="내용"
                    android:layout_marginTop="13dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,TextContrastCheck" />
                <EditText
                    android:id="@+id/write_contents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="368dp"
                    android:layout_above="@+id/input_area"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/default_input_round"
                    android:gravity="top"
                    android:hint="내용을 입력하세요."
                    android:inputType="textMultiLine"
                    android:padding="15dp"
                    android:scrollHorizontally="false"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#a9a9a9"
                    tools:ignore="HardcodedText,TextContrastCheck" />

                <LinearLayout
                    android:id="@+id/hideimg_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/hideimg01"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/empty_photo"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/hideimg02"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/empty_photo"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/hideimg03"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/empty_photo"
                        android:scaleType="fitXY" />
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/limit_img_area"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:layout_above="@+id/input_area">

                    <ImageView
                        android:id="@+id/limit_img"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/empty_photo"
                        android:scaleType="fitXY" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/img_list"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_below="@+id/limit_img"
                        android:orientation="horizontal" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/clear_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginBottom="-10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_above="@+id/img_list"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="120dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/approval_fail" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="start"
                    android:text="키워드(선택)"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pretendard_bold"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,TextContrastCheck" />

                <TextView
                    android:id="@+id/select_category_txt"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/default_input_round"
                    android:gravity="center|start"
                    android:paddingStart="15dp"
                    android:paddingEnd="10dp"
                    android:text="#정보에요"
                    android:textColor="#696969"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,TextContrastCheck" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    app:cardBackgroundColor="@color/new_blue"
                    app:cardCornerRadius="5dp"
                    android:layout_marginTop="20dp"
                    app:cardElevation="0dp">
                    <TextView
                        android:id="@+id/addcommunity_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/pretendard_regular"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="전송하기"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText,RtlSymmetry" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/login_alert_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4D000000"
        android:clickable="false"
        android:visibility="gone">

        <ImageView
            android:id="@+id/loading_view"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            tools:ignore="ContentDescription" />

    </RelativeLayout>
</RelativeLayout>
