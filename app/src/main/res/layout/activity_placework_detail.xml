<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".ui.place.PlaceWorkDetailActivity">

    <!--@+id/top_bar-->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="업무상세"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="16sp"
            android:fontFamily="@font/inter_regular"
            tools:ignore="HardcodedText,SpeakableTextPresentCheck,TouchTargetSizeCheck,UsingOnClickInXml" />
        <ImageView
            android:id="@+id/menu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/back_btn"
            tools:ignore="UsingOnClickInXml,TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/top_bar_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/top_bar"
        android:background="#dcdcdc"
        android:orientation="vertical" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_btn_box"
        android:layout_below="@+id/top_bar_line"
        android:layout_marginTop="16sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/workimg_url"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:cardBackgroundColor="#EDEDED"
                    app:cardCornerRadius="60dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/white_plus" />

                        <ImageView
                            android:id="@+id/workimg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/workimg_url"
                    android:layout_alignBottom="@+id/workimg_url"
                    android:layout_marginStart="10dp"
                    android:layout_toStartOf="@+id/applove_state"
                    android:layout_toEndOf="@+id/workimg_url"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="start|center"
                        android:text="이름"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText,TextContrastCheck" />

                    <TextView
                        android:id="@+id/department"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="start|center"
                        android:text="부서"
                        android:textColor="#6395EC"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText,TextContrastCheck" />
                </LinearLayout>


                <TextView
                    android:id="@+id/applove_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/workimg_url"
                    android:layout_alignBottom="@+id/workimg_url"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="center"
                    android:text="처리 중"
                    android:textColor="#6395EC"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="center"
                    android:text="할일"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/input_worktitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="start|center"
                    android:hint="업무 내용"
                    android:textColor="#696969"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="center"
                android:text="부가설명"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/work_content_set"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter_regular"
                android:gravity="start"
                android:text="내용"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="완료 방법"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/workadd_01_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="인증사진"
                    android:textColor="#1483FE"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="start|center"
                    android:text="마감시간"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/endtime_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="start|center"
                    android:text="00:00 MM"
                    android:textColor="#696969"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/success_check_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/success_check_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/success_01_txt"
                        android:layout_width="100dp"
                        android:layout_height="27dp"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:text="완료"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/resize_service_off"
                        tools:ignore="HardcodedText" />


                    <TextView
                        android:id="@+id/success_02_txt"
                        android:layout_width="100dp"
                        android:layout_height="27dp"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:text="미완료"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/resize_service_off"
                        tools:ignore="HardcodedText" />

                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/img_area"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:id="@+id/profile_img"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="8dp"
                            app:cardBackgroundColor="#dcdcdc"
                            app:cardElevation="0dp">
                            <ImageView
                                android:id="@+id/upload_success_img"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="0dp"
                                android:layout_margin="0dp"
                                android:scaleType="fitXY" />

                            <ImageView
                                android:id="@+id/img_plus"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_centerInParent="true"
                                android:background="@drawable/white_plus" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/clear_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:cardElevation="0dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="120dp">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/approval_fail" />
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>
                <TextView
                    android:id="@+id/incomplete_title"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_marginTop="16sp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:text="미완료 사유"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:id="@+id/incomplete_input"
                    android:layout_width="match_parent"
                    android:layout_height="177dp"
                    android:background="#f2f2f2"
                    android:clickable="false"
                    android:enabled="false"
                    android:gravity="start"
                    android:hint="미완료 사유"
                    android:inputType="text"
                    android:padding="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#a9a9a9"
                    tools:ignore="HardcodedText,TextContrastCheck" />

            </LinearLayout>



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottom_btn_box"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/work_save_accept"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="7.5dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/mainbtn"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginEnd="7.5dp"
                android:alpha="0.6"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:text="저장"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:ignore="HardcodedText,TextContrastCheck" />
        </androidx.cardview.widget.CardView>


        <!--        <TextView-->
        <!--            android:id="@+id/work_save_deaccept"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="40dp"-->
        <!--            android:layout_weight="1"-->
        <!--            android:background="#dcdcdc"-->
        <!--            android:gravity="center"-->
        <!--            android:text="반려"-->
        <!--            android:textColor="@color/black"-->
        <!--            tools:ignore="HardcodedText,TextContrastCheck" />-->

        <androidx.cardview.widget.CardView
            android:id="@+id/work_delete"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="7.5dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#E9E9E9"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:text="닫기"
                android:alpha="0.6"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/login_alert_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4D000000"
        android:clickable="false"
        android:visibility="gone">

        <ImageView
            android:id="@+id/loading_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            tools:ignore="ContentDescription" />
    </RelativeLayout>
</RelativeLayout>