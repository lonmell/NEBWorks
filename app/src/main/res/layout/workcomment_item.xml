<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/total_item"
    tools:ignore="HardcodedText,RtlSymmetry">

    <!-- 원댓일 경우-->
    <LinearLayout
        android:id="@+id/origianl_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/profile_box"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                app:cardCornerRadius="40dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/profile_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:background="@drawable/certi01" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/origianl_comment01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/profile_box"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/comment_user_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:text="작성자이름"
                        android:textColor="#949494"
                        android:textSize="15sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/Writer_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/comment_user_id"
                        android:background="@drawable/default_gray_round"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="작성자"
                        android:textColor="#696969"
                        android:textSize="11sp"
                        android:visibility="invisible"
                        tools:ignore="HardcodedText,SmallSp" />

                    <RelativeLayout
                        android:id="@+id/edit_bottom"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical"
                        android:scaleType="fitCenter">

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="23dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/list_setting" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/comment_user_write_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/origianl_comment01"
                android:layout_alignStart="@+id/origianl_comment01"
                android:layout_gravity="start"
                android:layout_toEndOf="@+id/Writer_box"
                android:alpha="0.3"
                android:fontFamily="@font/inter_regular"
                android:gravity="end|center"
                android:paddingEnd="10dp"
                android:text="작성시간"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <ImageView
                android:id="@+id/delete_comment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                android:background="@drawable/delete_comment" />

            <TextView
                android:id="@+id/comment_user_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/delete_comment"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:text="댓글"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/edit_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/comment_user_contents"
                android:layout_alignBottom="@+id/comment_user_contents"
                android:layout_toEndOf="@+id/comment_user_contents"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:text="(수정됨)"
                android:textColor="#dedede"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:id="@+id/reply_cnt"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_toEndOf="@+id/delete_comment"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="center"
                android:text="답글 0개"
                android:textColor="#54585A"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:id="@+id/like_area"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/like_cnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="start|center"
                    android:text="0"
                    android:textColor="#54585A"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/like_icon"
                    android:layout_width="20dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_like_off" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dbdbdb"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reply_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="#f2f2f2"/>
    <!--대댓일 경우-->
</LinearLayout>