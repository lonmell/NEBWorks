<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:ignore="HardcodedText,ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/all_memberlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff" />
            <TextView
                android:id="@+id/no_data_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/all_memberlist"
                android:layout_alignBottom="@+id/all_memberlist"
                android:background="#ffffff"
                android:gravity="center"
                android:text="입력된 공지내용이 없습니다."
                android:textColor="#dcdcdc"
                android:textSize="22sp"
                android:visibility="gone"
                tools:ignore="HardcodedText" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/login_alert_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4D000000"
        android:clickable="false"
        android:visibility="gone">

        <ImageView
            android:id="@+id/loading_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            tools:ignore="ContentDescription" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/nodata_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="350dp"
            android:layout_height="212dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="@drawable/ic_first_status_btn" />
    </LinearLayout>
</RelativeLayout>