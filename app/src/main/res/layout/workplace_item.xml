<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="#dbdbdb"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/total_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1.5dp"
        app:cardBackgroundColor="#f2f2f2"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">
            <RelativeLayout
                android:id="@+id/item_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/i_o_btn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp"
                    android:elevation="10dp"
                    android:layout_alignParentStart="true"
                    app:cardBackgroundColor="@color/blue"
                    app:cardCornerRadius="60dp"
                    app:cardElevation="5dp">

                    <ImageView
                        android:id="@+id/store_thumnail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#dcdcdc"
                        android:scaleType="fitXY" />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:id="@+id/store_basic_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/i_o_btn"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:weightSum="2"
                    android:layout_toStartOf="@+id/place_state"
                    android:layout_toEndOf="@+id/i_o_btn"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@+id/place_state"
                            android:fontFamily="@font/inter_bold"
                            android:gravity="start|center"
                            android:maxLines="1"
                            android:text="작업 중"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            tools:ignore="HardcodedText" />
                        <RelativeLayout
                            android:id="@+id/place_state"
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:layout_marginEnd="10dp"
                            android:layout_alignTop="@+id/title"
                            android:layout_alignBottom="@+id/title"
                            android:layout_toStartOf="@+id/list_setting"
                            app:cardCornerRadius="3dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/item_peoplecnt_icon"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="3dp"
                                android:scaleType="fitXY"
                                android:background="@drawable/people_icon2" />

                            <TextView
                                android:id="@+id/item_peoplecnt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/item_peoplecnt_icon"
                                android:fontFamily="@font/inter_bold"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="0"
                                android:textColor="#A9A9A9"
                                android:textSize="14sp"
                                tools:ignore="HardcodedText,TextContrastCheck" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/list_setting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/title"
                            android:layout_alignBottom="@+id/title"
                            android:layout_alignParentEnd="true">

                            <RelativeLayout
                                android:id="@+id/list_img_area"
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:visibility="visible">

                                <ImageView
                                    android:layout_width="3dp"
                                    android:layout_height="15dp"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/list_setting" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="start|center"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:text="작업 중"
                        android:textColor="#54585A"
                        android:textSize="15sp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/store_kind_state"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/money_area"
                    android:layout_alignTop="@+id/money_area"
                    android:layout_alignBottom="@+id/money_area"
                    app:cardBackgroundColor="#DBDBDB"
                    app:cardElevation="0dp"
                    android:visibility="visible"
                    app:cardCornerRadius="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/inter_bold"
                        android:gravity="center"
                        android:text="임시저장중"
                        android:textColor="#54585A"
                        android:textSize="10sp"
                        tools:ignore="HardcodedText" />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:id="@+id/money_area"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="23dp"
                    android:layout_alignStart="@+id/store_basic_info"
                    android:layout_below="@+id/store_basic_info"
                    android:visibility="invisible"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="start|center"
                        android:maxLines="1"
                        android:text="예상급여"
                        android:textColor="#54585A"
                        android:textSize="13sp"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/total_money"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/inter_bold"
                        android:gravity="start|center"
                        android:maxLines="1"
                        android:layout_marginStart="10dp"
                        android:text="0원"
                        android:textColor="#000000"
                        android:textSize="13sp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>

