<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#EFF4FD"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/term_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/del_term01"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="start|center"
            android:paddingStart="10dp"
            android:text="근로자가 무단 결근 2일 이상 하거나 월 2일 이상\n결근하는 경우 근로계약을 해지 할 수 있음"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/del_term01"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_close_gray2" />
        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
