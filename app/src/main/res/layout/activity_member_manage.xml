<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:ignore="HardcodedText"
    tools:context=".ui.main.MainFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--@+id/top_bar-->
        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_alignParentTop="true"
            android:background="#ffffff">

            <LinearLayout
                android:id="@+id/back_btn"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/find_right_arrow"
                    android:rotation="180" />
            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/inter_bold"
                android:text="직원관리"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/noti_area"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">

                <androidx.cardview.widget.CardView
                    android:id="@+id/noti_red"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_alignTop="@+id/notice"
                    android:layout_alignEnd="@+id/notice"
                    app:cardBackgroundColor="#DD6540"
                    app:cardCornerRadius="60dp"
                    app:cardElevation="0dp" />

                <ImageView
                    android:id="@+id/notice"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/bell" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/title_area"
            android:layout_width="match_parent"
            android:layout_below="@+id/top_bar"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="55dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:text="직원목록"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_bold"
                android:layout_toStartOf="@+id/change_place"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:textSize="25sp"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/change_place"
                    android:layout_width="180dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#E0EAFB">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/select_place"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:gravity="start|center"
                            android:text="매장선택"
                            android:textColor="@color/blue" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/ic_page_move_arrow"
                            android:rotation="90"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title_area">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/all_memberlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff" />

            <LinearLayout
                android:id="@+id/nodata_area"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:background="#ffffff"
                android:orientation="vertical"
                android:visibility="gone">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="#f2f2f2"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="29dp"
                            android:background="@drawable/remove_blank" />
                        <TextView
                            android:id="@+id/nodata_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="해당되는 직원이 없습니다.\n직원을 추가해주세요."
                            android:textSize="17sp"
                            android:textColor="#696969"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="29dp"
                            android:gravity="center"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
<!--            <ImageView-->
<!--                android:id="@+id/add_member_btn"-->
<!--                android:layout_width="80dp"-->
<!--                android:layout_height="80dp"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:layout_alignParentBottom="true"-->
<!--                android:layout_marginEnd="20dp"-->
<!--                android:layout_marginBottom="40dp"-->
<!--                android:background="@drawable/addmemberbtn" />-->
            <include
                android:id="@+id/add_btn"
                layout="@layout/addbtn"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
