<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_area"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/default_gray_round"
    android:orientation="horizontal"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/i_o_btn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="15dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/blue"
        app:cardCornerRadius="60dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/store_thumnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#dcdcdc"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/applicant_store_line"
        android:layout_toEndOf="@+id/i_o_btn"
        android:layout_alignTop="@+id/i_o_btn"
        android:layout_alignBottom="@+id/i_o_btn"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:weightSum="2">


        <TextView
            android:id="@+id/item_store_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_bold"
            android:gravity="bottom|start"
            android:text="매장이름"
            android:textColor="#000"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />


        <TextView
            android:id="@+id/item_store_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top|start"
            android:singleLine="true"
            android:text="매장 주소"
            android:textColor="#696969"
            android:textSize="13sp"
            tools:ignore="HardcodedText,RtlSymmetry,TextContrastCheck" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/applicant_store_line"
        android:layout_width="82dp"
        android:layout_height="28dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/i_o_btn">
        <androidx.cardview.widget.CardView
            android:id="@+id/applicant_storegroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            app:cardBackgroundColor="@color/blue"
            app:cardCornerRadius="60dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:text="근무 신청"
                android:textColor="#ffffff"
                android:fontFamily="@font/inter_regular"
                android:textSize="12sp"
                tools:ignore="HardcodedText,RtlSymmetry,TextContrastCheck" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>
