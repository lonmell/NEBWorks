<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.worksite.TaskReportActivity">
    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_btn"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            tools:ignore="RtlSymmetry">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/find_right_arrow"
                android:padding="20dp"
                android:rotation="180" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="end|center"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/pretendard_regular"
                android:gravity="center"
                android:text="보고하기"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:visibility="gone"
            android:layout_below="@+id/top_bar"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:text="게시일"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="입력하지 않을 경우 즉시 게시됩니다."
                android:textColor="@color/blue"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="마감시간(자동기록)"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#a9a9a9"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/write_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/grayback_gray_round"
                android:gravity="start|center"
                android:paddingStart="15dp"
                android:text="00:00"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/reject_state_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="반려사유"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/reject_reason_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/grayback_gray_round"
                android:fontFamily="@font/pretendard_regular"
                android:gravity="top|start"
                android:padding="15dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="보고사항"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:inputType="textMultiLine"
            android:background="@drawable/default_input_round"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="top|start"
            android:padding="15dp"
            android:text=""
            android:textColor="@color/black"
            android:hint="보고사항을 작성해주세요."
            android:textSize="16sp" />

        <!-- 업무 보고 방식 영역 -->
        <RelativeLayout
            android:id="@+id/task_kind_01"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="start"
            android:layout_margin="20dp"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/noti_img"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#dcdcdc"
                    app:cardElevation="0dp">
                    <ImageView
                        android:id="@+id/task_kind_01img"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:visibility="visible"
                        android:scaleType="fitXY"
                        android:background="@drawable/empty_photo" />

                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/clear_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:cardElevation="0dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                app:cardBackgroundColor="@color/white"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="120dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/approval_fail" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/task_kind_00"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/select01_box"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/default_select_round">

                <ImageView
                    android:id="@+id/select01_round"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_full_round"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"/>
                <TextView
                    android:id="@+id/select01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:layout_gravity="center"
                    android:text="완료"
                    android:textColor="#54585A"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/select02_box"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/default_gray_round">

                <ImageView
                    android:id="@+id/select02_round"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_empty_round"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"/>
                <TextView
                    android:id="@+id/select02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:layout_gravity="center"
                    android:text="미완료"
                    android:textColor="#54585A"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
        <!-- 업무 보고 방식 영역 -->
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:background="@color/blue">

        <TextView
            android:id="@+id/accept_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="center"
            android:text="업무보고하기"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>
