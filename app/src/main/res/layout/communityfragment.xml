<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ui.community.CommunityActivity"
    tools:ignore="UsingOnClickInXml,ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck,UsingOnClickInXml">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- TabLayou 을 배치한다. -->
            <LinearLayout
                android:id="@+id/select_select_area"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_below="@+id/place_select2"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/select_fragmentbtn1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/select_fragmenttv1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:text="자유게시판"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText,NestedWeights" />

                    <LinearLayout
                        android:id="@+id/select_fragmentline1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#8EB3FC"
                        android:orientation="horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/select_fragmentbtn2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/select_fragmenttv2"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:text="사장님페이지"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText,NestedWeights" />

                    <LinearLayout
                        android:id="@+id/select_fragmentline2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:orientation="horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/select_fragmentbtn3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/select_fragmenttv3"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:text="세금/노무"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText,NestedWeights" />

                    <LinearLayout
                        android:id="@+id/select_fragmentline3"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:orientation="horizontal" />
                </LinearLayout>
            </LinearLayout>

            <!--CommunityFragment1-->
            <RelativeLayout
                android:id="@+id/community_fragment1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/search_area"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_below="@+id/title"
                            android:layout_margin="20dp"
                            android:background="@drawable/default_input_round"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <RelativeLayout
                                android:id="@+id/store_search"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:alpha="0.8"
                                android:background="#ffffff"
                                android:orientation="horizontal"
                                android:padding="5dp">

                                <EditText
                                    android:id="@+id/search_category"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginStart="11dp"
                                    android:layout_marginEnd="16dp"
                                    android:layout_toStartOf="@+id/search_btn"
                                    android:background="@null"
                                    android:hint="검색하기"
                                    android:importantForAutofill="no"
                                    android:inputType="text"
                                    android:singleLine="false"
                                    android:textColor="#000000"
                                    android:textColorHint="#696969"
                                    tools:ignore="HardcodedText,RtlSymmetry,TouchTargetSizeCheck" />

                                <LinearLayout
                                    android:id="@+id/search_btn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="10dp"
                                    android:padding="5dp">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/ic_search"
                                        android:fontFamily="@font/applesdgothicneo"
                                        android:textColor="@color/black"
                                        android:textSize="15sp"
                                        tools:ignore="HardcodedText" />
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ad_area"
                            android:layout_width="match_parent"
                            android:layout_height="105dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/ad_img01" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/inter_bold"
                                android:text="인기게시글"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/more01"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="15dp"
                                android:fontFamily="@font/inter_bold"
                                android:padding="5dp"
                                android:text="더보기 >"
                                android:textColor="#949494"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="20dp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/best_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/no_data_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/best_list"
                                android:layout_alignBottom="@+id/best_list"
                                android:background="#ffffff"
                                android:gravity="center"
                                android:text="인기게시글이 없습니다."
                                android:textColor="#dcdcdc"
                                android:textSize="20sp"
                                android:visibility="gone"
                                tools:ignore="HardcodedText" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:layout_marginTop="50dp"
                            android:background="#F5F6F8" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/inter_bold"
                                android:text="전체게시글"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/more02"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="15dp"
                                android:fontFamily="@font/inter_bold"
                                android:padding="5dp"
                                android:text="더보기 >"
                                android:textColor="#949494"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="20dp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/all_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/no_data_txt2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/best_list"
                                android:layout_alignBottom="@+id/best_list"
                                android:background="#ffffff"
                                android:gravity="center"
                                android:text="게시글이 없습니다."
                                android:textColor="#dcdcdc"
                                android:textSize="20sp"
                                android:visibility="gone"
                                tools:ignore="HardcodedText" />
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>

            </RelativeLayout>

            <!--CommunityFragment2-->
            <androidx.core.widget.NestedScrollView
                android:id="@+id/community_fragment2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <!--카테고리-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/all_list2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/no_data_txt3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/best_list"
                            android:layout_alignBottom="@+id/best_list"
                            android:background="#ffffff"
                            android:gravity="center"
                            android:text="게시글이 없습니다."
                            android:textColor="#dcdcdc"
                            android:textSize="20sp"
                            android:visibility="gone"
                            tools:ignore="HardcodedText" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <!--CommunityFragment3-->
            <androidx.core.widget.NestedScrollView
                android:id="@+id/community_fragment3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!-- 알려드립니다 - 세무 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="25dp"
                        android:fontFamily="@font/inter_bold"
                        android:text="알려드립니다 - 세무"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/semu_01"
                        android:layout_width="match_parent"
                        android:layout_height="78dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        app:cardBackgroundColor="#6395EC"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="15dp"
                            android:fontFamily="@font/inter_bold"
                            android:gravity="center|start"
                            android:text="소상공인 세금 절세\n알려드립니다."
                            android:textColor="@color/white"
                            android:textSize="17sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/semu_02"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        app:cardBackgroundColor="#F5F6F8"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/inter_bold"
                                android:gravity="center|start"
                                android:text="부가세란?"
                                android:textColor="#949494"
                                android:textSize="17sp" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:padding="3dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="60dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/find_right_arrow"
                                    android:rotation="90" />
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/semu_03"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        app:cardBackgroundColor="#F5F6F8"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/inter_bold"
                                android:gravity="center|start"
                                android:text="소득세란?"
                                android:textColor="#949494"
                                android:textSize="17sp" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:padding="3dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="60dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/find_right_arrow"
                                    android:rotation="90" />
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="59dp"
                        android:layout_marginEnd="25dp"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/inter_bold"
                            android:text="세금신고 도움받기"
                            android:gravity="start|center"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="end|center"
                            android:fontFamily="@font/inter_regular"
                            android:text="파트너 세무사 전체보기 >"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:textSize="13sp" />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="#F5F6F8"
                        android:layout_marginTop="35dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginTop="26dp"
                        android:fontFamily="@font/inter_bold"
                        android:text="알려드립니다 - 노무"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/nomu_01"
                        android:layout_width="match_parent"
                        android:layout_height="78dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="15dp"
                        app:cardBackgroundColor="#6395EC"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="15dp"
                            android:fontFamily="@font/inter_bold"
                            android:gravity="center|start"
                            android:text="소상공인 세금 절세\n알려드립니다."
                            android:textColor="@color/white"
                            android:textSize="17sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/nomu_02"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        app:cardBackgroundColor="#F5F6F8"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/inter_bold"
                                android:gravity="center|start"
                                android:text="부가세란?"
                                android:textColor="#949494"
                                android:textSize="17sp" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:padding="3dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="60dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/find_right_arrow"
                                    android:rotation="90" />
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/nomu_03"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        app:cardBackgroundColor="#F5F6F8"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/inter_bold"
                                android:gravity="center|start"
                                android:text="소득세란?"
                                android:textColor="#949494"
                                android:textSize="17sp" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:padding="3dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="60dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/find_right_arrow"
                                    android:rotation="90" />
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="59dp"
                        android:layout_marginEnd="25dp"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/inter_bold"
                            android:text="노무문제 도움받기"
                            android:gravity="start|center"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="end|center"
                            android:fontFamily="@font/inter_regular"
                            android:text="파트너 세무사 전체보기 >"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:textSize="13sp" />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"/>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

        <include
            layout="@layout/addbtn"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>

