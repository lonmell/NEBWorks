<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_total"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    tools:ignore="HardcodedText"
    android:padding="0dp">
    <LinearLayout
        android:id="@+id/date_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_notify_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00월 00일"
            android:layout_margin="15dp"
            android:textSize="16sp"
            android:textColor="#242627"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#dbdbdb"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#ffffff">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="5dp"
                android:gravity="center"
                android:paddingBottom="5dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/profile_area"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardBackgroundColor="#dcdcdc"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    app:cardCornerRadius="60dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/profile_setimg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="0dp"
                        android:padding="0dp"
                        android:scaleType="fitXY" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/item_notify_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/item_notify_readyn"
                    android:layout_toEndOf="@+id/profile_area"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="매장이름"
                    android:textColor="#000"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />
                <LinearLayout
                    android:id="@+id/read_yn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/item_notify_name"
                    android:layout_alignTop="@+id/item_notify_name"
                    android:layout_alignBottom="@+id/item_notify_name"
                    android:visibility="gone"
                    android:gravity="center">
                    <androidx.cardview.widget.CardView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#DD6540"
                        app:cardCornerRadius="60dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_notify_contents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_notify_name"
                    android:layout_alignStart="@+id/item_notify_name"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/item_notify_time"
                    android:fontFamily="@font/pretendard_regular"
                    android:gravity="center|start"
                    android:text="매장주소"
                    android:textSize="12sp"
                    android:textColor="#696969"
                    tools:ignore="HardcodedText,RtlSymmetry,TextContrastCheck" />


                <TextView
                    android:id="@+id/item_notify_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_notify_name"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center|end"
                    android:text="00:00"
                    android:textColor="#696969"
                    android:textSize="10sp"
                    tools:ignore="HardcodedText,RtlSymmetry,TextContrastCheck" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</LinearLayout>
