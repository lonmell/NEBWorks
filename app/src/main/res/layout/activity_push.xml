<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.PushActivity"
    tools:ignore="HardcodedText,SmallSp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        tools:ignore="RtlSymmetry"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/back_btn"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/find_right_arrow"
                android:rotation="180" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="end|center"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:text="알림관리"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/save_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:textColor="#8EB3FC"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:text="저장"
            android:fontFamily="@font/inter_bold"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="start|center"
        android:text="업무 알림"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        tools:ignore="HardcodedText" />

    <!-- 매장 알림 ON/OFF -->
    <RelativeLayout
        android:id="@+id/active_on_area01"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/active_on_bt01"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:checked="true"
            android:minWidth="50dp"
            android:track="@drawable/switch_selector"
            tools:ignore="UseSwitchCompatOrMaterialXml,TouchTargetSizeCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:weightSum="2"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_bold"
                android:gravity="start|center"
                android:text="매장 업무"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_regular"
                android:gravity="start|center"
                android:text="근무자 출근/퇴근 알림"
                android:textSize="13sp"
                android:layout_weight="1"
                android:textColor="@color/black"
                tools:ignore="HardcodedText,SmallSp" />
        </LinearLayout>



    </RelativeLayout>

    <!-- 결재 알림 ON/OFF -->
    <RelativeLayout
        android:id="@+id/active_on_area02"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/active_on_bt02"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:checked="true"
            android:minWidth="50dp"
            android:track="@drawable/switch_selector"
            tools:ignore="UseSwitchCompatOrMaterialXml,TouchTargetSizeCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:weightSum="2"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_bold"
                android:gravity="start|center"
                android:text="결재 알림"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_regular"
                android:gravity="start|center"
                android:text="할일 승인/완료 및 급여명세서 알림"
                android:textSize="13sp"
                android:layout_weight="1"
                android:textColor="@color/black"
                tools:ignore="HardcodedText,SmallSp" />
        </LinearLayout>


    </RelativeLayout>

    <!-- 근무시간 알림 -->
    <RelativeLayout
        android:id="@+id/active_on_area03"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/active_on_bt03"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:checked="true"
            android:minWidth="50dp"
            android:track="@drawable/switch_selector"
            tools:ignore="UseSwitchCompatOrMaterialXml,TouchTargetSizeCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:weightSum="2"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_bold"
                android:gravity="start|center"
                android:text="근무시간 알림"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_regular"
                android:gravity="start|center"
                android:text="근무자 근무시간 알림"
                android:textSize="13sp"
                android:layout_weight="1"
                android:textColor="@color/black"
                tools:ignore="HardcodedText,SmallSp" />
        </LinearLayout>


    </RelativeLayout>


    <!-- 이력서/면접 -->
    <RelativeLayout
        android:id="@+id/active_on_area04"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <Switch
            android:id="@+id/active_on_bt04"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:checked="true"
            android:minWidth="50dp"
            android:track="@drawable/switch_selector"
            tools:ignore="UseSwitchCompatOrMaterialXml,TouchTargetSizeCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:weightSum="2"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_bold"
                android:gravity="start|center"
                android:text="이력서 및 면접 알림"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_regular"
                android:gravity="start|center"
                android:text="근무신청 / 매장초대"
                android:textSize="13sp"
                android:layout_weight="1"
                android:textColor="@color/black"
                tools:ignore="HardcodedText,SmallSp" />
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>