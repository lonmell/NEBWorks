<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.user.DeleteUserActivity"
    tools:ignore="HardcodedText,SmallSp">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@color/white"
        android:orientation="horizontal"
        tools:ignore="RtlSymmetry">

        <LinearLayout
            android:id="@+id/back_btn"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/find_right_arrow"
                android:rotation="180" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="end|center"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:text="탈퇴하기"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <TextView
        android:id="@+id/pagetv01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/inter_bold"
        android:text="탈퇴 전 확인하세요"
        android:textColor="@color/black"
        android:textSize="24sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/pagetv02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/inter_regular"
        android:text="탈퇴하시면 이용 중인 모든 매장에서 탈퇴되며,\n모든 데이터는 복구가 불가능 합니다."
        android:textColor="@color/black"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />

    <androidx.cardview.widget.CardView
        android:id="@+id/guide_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardBackgroundColor="#F5F6F8"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/dot01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/pagetv03"
                android:layout_alignBottom="@+id/pagetv03"
                android:layout_alignParentStart="true"
                android:layout_marginStart="25dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_gray_check" />
            </LinearLayout>


            <TextView
                android:id="@+id/pagetv03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="13dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/dot01"
                android:fontFamily="@font/inter_bold"
                android:text="출퇴근 데이터, 예상급여, 커리어 등\n저장해둔 모든 데이터가 삭제됩니다."
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:ignore="HardcodedText,SmallSp" />

            <LinearLayout
                android:id="@+id/middle_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/pagetv03"
                android:layout_margin="15dp"
                android:background="#D9D9D9" />

            <LinearLayout
                android:id="@+id/dot02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/pagetv04"
                android:layout_alignBottom="@+id/pagetv04"
                android:layout_alignParentStart="true"
                android:layout_marginStart="25dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_gray_check" />
            </LinearLayout>

            <TextView
                android:id="@+id/pagetv04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/middle_line"
                android:layout_gravity="center"
                android:layout_marginStart="13dp"
                android:layout_marginBottom="15dp"
                android:layout_toEndOf="@+id/dot02"
                android:fontFamily="@font/inter_bold"
                android:text="타인의 글의 댓글은 삭제되지 않으니\n미리 확인하세요."
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:ignore="HardcodedText,SmallSp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/accept_del_area"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        app:cardBackgroundColor="#E0EAFB"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/accept_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/resize_service_off" />

            <TextView
                android:id="@+id/pagetv05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_bold"
                android:text="안내사항을 모두 확인하였으며, 이에 동의합니다."
                android:textColor="#6395EC"
                android:textSize="14sp"
                tools:ignore="HardcodedText,SmallSp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/del_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="23dp"
            app:cardBackgroundColor="#C3C3C3"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_bold"
                android:text="탈퇴하기"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:ignore="HardcodedText,SmallSp" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</LinearLayout>