<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_total"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:orientation="vertical"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:id="@+id/area01"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/work_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:gravity="start|top"
            android:singleLine="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:text="제목"
            android:textColor="#696969"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlSymmetry" />


        <RelativeLayout
            android:id="@+id/work_date_info"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/work_title"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/work_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/work_kind"
                android:fontFamily="@font/inter_regular"
                android:gravity="start|center"
                android:singleLine="true"
                android:text="마감시간 : 00:00 AM"
                android:textColor="#696969"
                android:textSize="13sp"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <TextView
                android:id="@+id/work_kind"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/inter_regular"
                android:gravity="start|center"
                android:singleLine="true"
                android:text="현장사진"
                android:textColor="#1483FE"
                android:textSize="13sp"
                tools:ignore="HardcodedText,RtlSymmetry" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/list_setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/work_title"
            android:layout_alignBottom="@+id/work_title"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="3dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:background="@drawable/list_setting" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#f2f2f2"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>

