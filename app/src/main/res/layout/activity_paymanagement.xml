<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".ui.paymanagement.PayManagementActivity"
    tools:ignore="HardcodedText">

    <!--@+id/top_bar-->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_alignParentTop="true"
        android:background="#ffffff">
        <RelativeLayout
            android:id="@+id/back_btn"
            android:layout_width="59dp"
            android:layout_alignParentStart="true"
            android:layout_height="59dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:background="@drawable/find_right_arrow"
                android:rotation="180"
                tools:ignore="UsingOnClickInXml,TouchTargetSizeCheck,SpeakableTextPresentCheck" />
        </RelativeLayout>


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/inter_bold"
            android:text="전체 급여 관리"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/select_area"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/top_bar"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/change_place"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:cardBackgroundColor="#E0EAFB"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/change_place_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="start|center"
                    android:text="전체매장"
                    android:textColor="@color/blue" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/ic_page_move_arrow"
                    android:rotation="90" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/change_member"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            app:cardBackgroundColor="#E0EAFB"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/change_member_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="start|center"
                    android:text="전체직원"
                    android:textColor="@color/blue" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/ic_page_move_arrow"
                    android:rotation="90" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/select_date_area"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/select_area"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/prev_date"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:gravity="center|start">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/find_right_arrow"
                    android:rotation="-180" />
            </RelativeLayout>

            <TextView
                android:id="@+id/setdate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:text="0000년 00월"
                android:textColor="@color/black" />

            <RelativeLayout
                android:id="@+id/next_date"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:gravity="center|end">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/find_right_arrow" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/change_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:background="@drawable/calendar_resize" />
        </RelativeLayout>
    </RelativeLayout>

    <!-- TabLayou 을 배치한다. -->
    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/select01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/line01"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="급여 현황 및 작성" />
            <LinearLayout
                android:id="@+id/line01"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/blue"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/select02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/line01"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="급여명세" />
            <LinearLayout
                android:id="@+id/line02"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:ignore="HardcodedText,ContentDescription">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/all_memberlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="#ffffff" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/login_alert_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:clickable="false">

            <ImageView
                android:id="@+id/loading_view"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                tools:ignore="ContentDescription" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/nodata_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="#ffffff"
            android:orientation="vertical"
            android:visibility="visible">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#F5F6F8"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="29dp"
                        android:background="@drawable/remove_blank" />
                    <TextView
                        android:id="@+id/nodata_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="작성된 급여내역이 없습니다.\n급여 내역을 작성해주세요."
                        android:textSize="17sp"
                        android:textColor="#696969"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="29dp"
                        android:gravity="center"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/add_member_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/viewPager"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/addmemberbtn" />
</LinearLayout>
