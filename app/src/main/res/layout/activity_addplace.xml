                        tools:ignore="HardcodedText" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/insurance_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:padding="10dp"
                    android:text=" 고용보험"
                    android:textColor="#757575"
                    android:textSize="17sp"
                    app:drawableStartCompat="@drawable/resize_service_off"
                    tools:ignore="HardcodedText,TextContrastCheck" />

                <TextView
                    android:id="@+id/insurance_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:padding="10dp"
                    android:text=" 산재보험"
                    android:textColor="#757575"
                    android:textSize="17sp"
                    app:drawableStartCompat="@drawable/resize_service_off"
                    tools:ignore="HardcodedText,TextContrastCheck" />

                <TextView
                    android:id="@+id/insurance_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:padding="10dp"
                    android:text=" 국민연금"
                    android:textColor="#757575"
                    android:textSize="17sp"
                    app:drawableStartCompat="@drawable/resize_service_off"
                    tools:ignore="HardcodedText,TextContrastCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/insurance_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:padding="10dp"
                    android:text=" 건강보험"
                    android:textColor="#757575"
                    android:textSize="17sp"
                    app:drawableStartCompat="@drawable/resize_service_off"
                    tools:ignore="HardcodedText,TextContrastCheck" />

                <TextView
                    android:id="@+id/insurance_05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:padding="10dp"
                    android:text=" 없음"
                    android:textColor="#757575"
                    android:textSize="17sp"
                    app:drawableStartCompat="@drawable/resize_service_off"
                    tools:ignore="HardcodedText,TextContrastCheck" />
            </LinearLayout>

            <!--작업시작 날짜-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:weightSum="4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center|start"
                    android:padding="10dp"
                    android:text="작업시작일"
                    android:textColor="#000"
                    tools:ignore="HardcodedText,TextContrastCheck" />


                <TextView
                    android:id="@+id/input_workstart_day"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|end"
                    android:hint="작업시작 시간 선택"
                    android:importantForAutofill="no"
                    android:minHeight="48dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="#000000"
                    android:textColorHint="#a9a9a9"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,SpeakableTextPresentCheck,TextContrastCheck,TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

            </LinearLayout>

            <!--주 운영시간-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:weightSum="4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center|start"
                    android:padding="10dp"
                    android:text="작업시작"
                    android:textColor="#000"
                    tools:ignore="HardcodedText,TextContrastCheck" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
