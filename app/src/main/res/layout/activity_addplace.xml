<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".pop.WorkTimePicker"
    tools:ignore="HardcodedText">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/addPlaceBtn">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/back_btn"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center"
                        android:background="@drawable/back_btn" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="13dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="KOGAS"
                    android:textColor="#1483FE"
                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CBCBCB" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_regular"
                android:gravity="start|center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="매장정보입력"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_regular"
                android:gravity="start|center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="관리할 매장의 정보를 입력해주세요"
                android:textColor="#A9A9A9"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_regular"
                android:gravity="start|center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="매장 이미지"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:id="@+id/profile_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="#dcdcdc"
                        app:cardElevation="0dp">
                        <ImageView
                            android:id="@+id/profile_setimg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="0dp"
                            android:layout_margin="0dp"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/img_plus"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_centerInParent="true"
                            android:background="@drawable/white_plus" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/clear_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:cardElevation="0dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    app:cardBackgroundColor="#ffffff"
                    app:cardCornerRadius="120dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/approval_fail" />
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/alarm_all_on_bt_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/inter_regular"
                    android:text="매장 활성화( ON/OFF )"
                    android:textColor="#696969"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <Switch
                    android:id="@+id/active_on_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:checked="false"
                    android:minWidth="48dp"
                    android:track="@drawable/switch_selector"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/area02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/pop_text01_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="start|center"
                    android:text="사업자등록번호"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:id="@+id/registration_num_input_box"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#00ff0000"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="start|bottom"
                    android:hint="'-'제외 사업자 번호"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxEms="10"
                    android:maxLength="10"
                    android:textColor="#696969"
                    android:textColorHint="#a9a9a9"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,TouchTargetSizeCheck" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#696969"
                    android:orientation="vertical" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/area03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <TextView
                    android:id="@+id/pop_text02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:text="관리소 명"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:id="@+id/store_name_input_box"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#00ff0000"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="start|bottom"
                    android:hint="관리소 명을 입력해주세요."
                    android:inputType="textNoSuggestions"
                    android:textColor="#696969"
                    android:textColorHint="#a9a9a9"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,TouchTargetSizeCheck" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#696969"
                    android:orientation="vertical" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/area03_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <TextView
                    android:id="@+id/pop_text02_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:text="매장 명"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:id="@+id/store_name_input_box_1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#00ff0000"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="start|bottom"
                    android:hint="매장 명을 입력해주세요."
                    android:inputType="textNoSuggestions"
                    android:textColor="#696969"
                    android:textColorHint="#a9a9a9"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,TouchTargetSizeCheck" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#696969"
                    android:orientation="vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:text="매장 분류"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:id="@+id/area05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/select_success_kind_area"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp">

                        <Spinner
                            android:id="@+id/select_store_kind"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:background="#ffffff"
                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                        <TextView
                            android:id="@+id/select_store_kind_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignStart="@+id/select_store_kind"
                            android:layout_alignTop="@+id/select_store_kind"
                            android:layout_alignEnd="@+id/select_store_kind"
                            android:layout_alignBottom="@+id/select_store_kind"
                            android:background="#ffffff"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="start|center"
                            android:text="매장분류 선택"
                            android:textColor="#696969"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/other_store_input"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:background="#00ff0000"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="end|center"
                        android:hint="매장분류를 입력해주세요."
                        android:inputType="text"
                        android:textColor="#696969"
                        android:textColorHint="#a9a9a9"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,TouchTargetSizeCheck" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/pop_text12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_regular"
                android:gravity="start|center"
                android:text="와이파이 및 위치정보 등록"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/inter_regular"
                android:gravity="start|center"
                android:text="상세주소를 입력할때 건물명을 입력하면\n 더욱 정확한 데이터로 저장 할 수 있습니다."
                android:textColor="#dcdcdc"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/search_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="  현재 위치로 주소찾기"
                            android:textColor="#696969"
                            android:textSize="16sp"
                            app:drawableStartCompat="@drawable/my_location"
                            tools:ignore="HardcodedText" />
                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        app:cardBackgroundColor="#f2f2f2"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">

                        <EditText
                            android:id="@+id/pop_text14"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="#f2f2f2"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="start|center"
                            android:hint="주소"
                            android:importantForAutofill="no"
                            android:inputType="textNoSuggestions"
                            android:paddingStart="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="#a9a9a9"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,RtlSymmetry,TextContrastCheck,TouchTargetSizeCheck" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="#f2f2f2"
                        app:cardCornerRadius="10dp"
                        android:visibility="gone"
                        app:cardElevation="0dp">

                        <EditText
                            android:id="@+id/pop_text15"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="#f2f2f2"
                            android:fontFamily="@font/applesdgothicneo"
                            android:gravity="start|center"
                            android:hint="상세주소"
                            android:importantForAutofill="no"
                            android:inputType="textNoSuggestions"
                            android:paddingStart="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="#a9a9a9"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,RtlSymmetry,TextContrastCheck,TouchTargetSizeCheck" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:visibility="gone"
                app:cardBackgroundColor="#68B0FF"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/find_wifi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:text="Search"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,TextContrastCheck" />
            </androidx.cardview.widget.CardView>
            <!--급여 정산 날짜-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/pop_text06"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="start|center"
                    android:text="급여 정산 날짜"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:id="@+id/select_payment_day_area"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/pop_text06">

                    <Spinner
                        android:id="@+id/select_default_work_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:minWidth="120dp"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <TextView
                        android:id="@+id/select_default_work_time_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/select_default_work_time"
                        android:layout_alignTop="@+id/select_default_work_time"
                        android:layout_alignEnd="@+id/select_default_work_time"
                        android:layout_alignBottom="@+id/select_default_work_time"
                        android:background="#fff"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="end|center"
                        android:text="매월 1일"
                        android:textColor="#696969"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                </RelativeLayout>
            </RelativeLayout>

            <!--수습기간-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/pop_text08"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="start|center"
                    android:text="수습기간"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:id="@+id/select_store_test_period_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/pop_text08">

                    <Spinner
                        android:id="@+id/select_store_test_period"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#fff"
                        android:minWidth="120dp"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <TextView
                        android:id="@+id/select_store_test_period_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/select_store_test_period"
                        android:layout_alignTop="@+id/select_store_test_period"
                        android:layout_alignEnd="@+id/select_store_test_period"
                        android:layout_alignBottom="@+id/select_store_test_period"
                        android:background="#fff"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="end|center"
                        android:text="1 개월"
                        android:textColor="#696969"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                </RelativeLayout>
            </RelativeLayout>

            <!--휴가-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/pop_text09"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="start|center"
                    android:text="휴가"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:id="@+id/select_vacation_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/pop_text09">

                    <Spinner
                        android:id="@+id/select_vacation"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#fff"
                        android:minWidth="120dp"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <TextView
                        android:id="@+id/select_vacation_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/select_vacation"
                        android:layout_alignTop="@+id/select_vacation"
                        android:layout_alignEnd="@+id/select_vacation"
                        android:layout_alignBottom="@+id/select_vacation"
                        android:background="#fff"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="end|center"
                        android:text="없음"
                        android:textColor="#696969"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/pop_text11"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="start|center"
                    android:text="주영업시간"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:id="@+id/select_worktime_area"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/pop_text11">

                    <Spinner
                        android:id="@+id/select_worktime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:minWidth="120dp"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <TextView
                        android:id="@+id/select_worktime_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/select_worktime"
                        android:layout_alignTop="@+id/select_worktime"
                        android:layout_alignEnd="@+id/select_worktime"
                        android:layout_alignBottom="@+id/select_worktime"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="-1dp"
                        android:background="#fff"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="end|center"
                        android:text="주간"
                        android:textColor="#696969"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                </RelativeLayout>
            </RelativeLayout>

            <!--보험-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/pop_text13"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="start|center"
                    android:text="보험"
                    android:textColor="#696969"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:id="@+id/select_insurance_area"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginStart="15dp"
                    android:visibility="gone">

                    <Spinner
                        android:id="@+id/select_insurance"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:minWidth="120dp"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <TextView
                        android:id="@+id/select_insurance_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/select_insurance"
                        android:layout_alignTop="@+id/select_insurance"
                        android:layout_alignEnd="@+id/select_insurance"
                        android:layout_alignBottom="@+id/select_insurance"
                        android:background="#fff"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="start|center"
                        android:text="없음"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold"
