<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".bottomsheet.WorkTimePicker"
    tools:ignore="HardcodedText">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/addPlaceBtn"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:text="매장추가"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:id="@+id/back_btn"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/find_right_arrow"
                        android:rotation="180" />
                </LinearLayout>

                <TextView
                    android:id="@+id/save2btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:clickable="false"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="center"
                    android:text="임시저장"
                    android:textColor="@color/new_blue"
                    android:textSize="15sp"
                    android:visibility="invisible"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/gangwonedu_bold"
                android:gravity="start|center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="기본정보"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <!--매장 이미지는 일단 보류-->
            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/profile_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="#dcdcdc"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/profile_setimg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="0dp"
                            android:padding="0dp"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/img_plus"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:background="@drawable/white_plus" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/clear_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    app:cardBackgroundColor="#ffffff"
                    app:cardCornerRadius="120dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/approval_fail" />
                </androidx.cardview.widget.CardView>

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/area01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="start|center"
                    android:text="매장명"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:id="@+id/inputbox01"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/default_input_round"
                    android:fontFamily="@font/pretendard_regular"
                    android:gravity="start|center"
                    android:hint="매장명 입력"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxEms="10"
                    android:maxLength="10"
                    android:paddingStart="16dp"
                    android:paddingEnd="5dp"
                    android:textColor="#696969"
                    android:textColorHint="#a9a9a9"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,TouchTargetSizeCheck" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/area02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="start|center"
                    android:text="사업자등록번호"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <EditText
                        android:id="@+id/inputbox02"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:layout_toStartOf="@+id/confirm_registrnum"
                        android:background="@drawable/default_input_round"
                        android:fontFamily="@font/pretendard_regular"
                        android:gravity="start|center"
                        android:hint="숫자만 입력"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxEms="12"
                        android:maxLength="12"
                        android:paddingStart="16dp"
                        android:paddingEnd="5dp"
                        android:textColor="#696969"
                        android:textColorHint="#a9a9a9"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText,TouchTargetSizeCheck" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/confirm_registrnum"
                        android:layout_width="102dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        app:cardBackgroundColor="@color/blue_200"
                        app:cardCornerRadius="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:fontFamily="@font/pretendard_bold"
                            android:gravity="center"
                            android:text="중복확인"
                            android:textColor="@color/new_blue"
                            android:textSize="16sp"
                            tools:ignore="HardcodedText" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>


                <TextView
                    android:id="@+id/registr_num_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="start|center"
                    android:text=""
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/area03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="center"
                    android:text="매장분류"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/inputbox03"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/default_input_round"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="start|center"
                        android:paddingStart="16dp"
                        android:paddingEnd="5dp"
                        android:text="매장 분류 선택"
                        android:textColor="#a9a9a9"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText,TouchTargetSizeCheck" />

                    <ImageView
                        android:id="@+id/place_kind_down_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/down_arrow_gray" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/etc_inputBox"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/default_input_round"
                    android:fontFamily="@font/pretendard_regular"
                    android:gravity="start|center"
                    android:hint="매장 종류 입력"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxEms="12"
                    android:maxLength="12"
                    android:paddingStart="16dp"
                    android:paddingEnd="5dp"
                    android:textColor="#696969"
                    android:textColorHint="#a9a9a9"
                    android:textSize="16sp"
                    android:visibility="gone"
                    tools:ignore="HardcodedText,TouchTargetSizeCheck" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/area04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center"
                        android:text="주소입력"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        app:cardBackgroundColor="#f2f2f2"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">

                        <EditText
                            android:id="@+id/inputbox04"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginEnd="10dp"
                            android:layout_toStartOf="@+id/search_location"
                            android:background="@drawable/default_input_round"
                            android:fontFamily="@font/pretendard_regular"
                            android:gravity="start|center"
                            android:hint="주소 검색"
                            android:importantForAutofill="no"
                            android:inputType="textNoSuggestions"
                            android:paddingStart="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="#a9a9a9"
                            android:textSize="16sp"
                            tools:ignore="HardcodedText,RtlSymmetry,TextContrastCheck,TouchTargetSizeCheck" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/search_location"
                            android:layout_width="102dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:padding="10dp"
                            app:cardBackgroundColor="@color/blue_200"
                            app:cardCornerRadius="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:fontFamily="@font/pretendard_bold"
                                android:gravity="center"
                                android:text="주소검색"
                                android:textColor="@color/new_blue"
                                android:textSize="16sp"
                                tools:ignore="HardcodedText" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/inputbox04_1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/default_input_round"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="start|center"
                        android:hint="상세주소 입력"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:paddingStart="16dp"
                        android:paddingEnd="5dp"
                        android:textColor="#696969"
                        android:textColorHint="#a9a9a9"
                        android:textSize="16sp"
                        android:visibility="visible"
                        tools:ignore="HardcodedText,TouchTargetSizeCheck" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="50dp"
                android:background="#f2f2f2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/gangwonedu_bold"
                android:gravity="start|center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="공통 상세 정보"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:id="@+id/area05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="center"
                    android:text="급여정산일"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp">

                    <EditText
                        android:id="@+id/inputbox05"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toStartOf="@+id/tv05"
                        android:background="@drawable/default_input_round"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="start|center"
                        android:hint="숫자만 입력"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:paddingStart="16dp"
                        android:paddingEnd="5dp"
                        android:textColor="#696969"
                        android:textColorHint="#a9a9a9"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText,TouchTargetSizeCheck" />

                    <TextView
                        android:id="@+id/tv05"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center"
                        android:text="일"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </RelativeLayout>

            </LinearLayout>

            <!--수습기간-->
            <LinearLayout
                android:id="@+id/area06"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="center"
                    android:text="수습기간"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp">

                    <EditText
                        android:id="@+id/inputbox06"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_toStartOf="@+id/tv06"
                        android:background="@drawable/default_input_round"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="start|center"
                        android:hint="숫자만 입력"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxEms="10"
                        android:maxLength="10"
                        android:paddingStart="16dp"
                        android:paddingEnd="5dp"
                        android:textColor="#696969"
                        android:textColorHint="#a9a9a9"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText,TouchTargetSizeCheck" />

                    <TextView
                        android:id="@+id/tv06"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center"
                        android:text="일"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </RelativeLayout>
            </LinearLayout>

            <!--휴가-->
            <LinearLayout
                android:id="@+id/area07"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="center"
                    android:text="휴가기간"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/default_input_round">

                    <TextView
                        android:id="@+id/inputbox07"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="start|center"
                        android:hint="휴가기간 선택(ex.월차,연차)"
                        android:importantForAutofill="no"
                        android:paddingStart="16dp"
                        android:paddingEnd="5dp"
                        android:textColor="#696969"
                        android:textColorHint="#a9a9a9"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText,TouchTargetSizeCheck" />

                    <LinearLayout
                        android:id="@+id/down_arrow"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:background="@drawable/find_right_arrow"
                            android:rotation="90" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <!--보험-->
            <LinearLayout
                android:id="@+id/area08"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="center"
                    android:text="보험"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:id="@+id/boheomarea01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/default_input_round"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/boheom01"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/select_empty_round" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/boheomtv_01"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="start|center"
                        android:paddingStart="8dp"
                        android:paddingEnd="1dp"
                        android:text="4대보험"
                        android:textColor="#949494"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText,TouchTargetSizeCheck" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/boheomarea02"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/default_input_round"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/boheom02"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/select_empty_round" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/boheomtv_02"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="start|center"
                        android:paddingStart="8dp"
                        android:paddingEnd="1dp"
                        android:text="3.3%소득세"
                        android:textColor="#949494"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText,TouchTargetSizeCheck" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/boheomarea03"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/default_input_round"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/boheom03"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/select_empty_round" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/boheomtv_03"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="start|center"
                        android:paddingStart="8dp"
                        android:paddingEnd="1dp"
                        android:text="없음"
                        android:textColor="#949494"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText,TouchTargetSizeCheck" />
                </LinearLayout>
            </LinearLayout>

            <!--주 운영시간-->
            <LinearLayout
                android:id="@+id/area09"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginBottom="10dp"
                    android:background="#dbdbdb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="center"
                    android:text="주 운영시간"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TimePicker
                    android:id="@+id/time_setpicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numbersBackgroundColor="#ffffff"
                    android:numbersSelectorColor="@color/new_blue"
                    android:numbersTextColor="@color/black"
                    android:theme="@style/NumberPicker"
                    android:timePickerMode="spinner"
                    android:visibility="gone" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/inputbox08box"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toStartOf="@+id/inputbox_inside"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:id="@+id/inputbox08"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:gravity="center"
                            android:text="HHMM"
                            android:textSize="16sp" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/inputbox_inside"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="center"
                        android:text="~"
                        android:textColor="#949494"
                        android:textSize="14sp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/inputbox09box"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@+id/inputbox_inside"
                        app:cardBackgroundColor="#ffffff"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:id="@+id/inputbox09"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="HHMM"
                            android:textSize="16sp" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/addPlaceBtn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/new_blue"
                app:cardCornerRadius="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="center"
                    android:text="저장하기"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,TextContrastCheck" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/login_alert_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4D000000"
        android:clickable="false"
        android:visibility="gone">

        <ImageView
            android:id="@+id/loading_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

</RelativeLayout>