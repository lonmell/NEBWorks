<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--@+id/bottom_navigation-->
    <RelativeLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#fff"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/left_menu_icon"
            android:layout_alignStart="@+id/left_menu_icon"
            android:layout_alignEnd="@+id/left_menu_icon"
            android:background="#ffffff" />

        <LinearLayout
            android:id="@+id/left_menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/center_icon"
            android:elevation="15dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/bottom_navigation01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="btnOnclick"
                android:orientation="vertical"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/home_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/home_resize"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/home_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="홈"
                    android:textColor="#696969"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText,TextContrastCheck" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_navigation02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="btnOnclick"
                android:orientation="vertical"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/worktogo_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/worktogo_resize"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/worktogo_tv"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="할일"
                    android:textColor="#696969"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText,TextContrastCheck" />
            </LinearLayout>

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/center_icon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="#68B0FF"
            app:cardCornerRadius="60dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/bottom_navigation03"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:onClick="btnOnclick"
                    android:padding="5dp"
                    android:text="캘린더"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    app:drawableTopCompat="@drawable/calendar_on_resize"
                    tools:ignore="HardcodedText,TextContrastCheck" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/right_menu_icon"
            android:layout_alignStart="@+id/right_menu_icon"
            android:layout_alignEnd="@+id/right_menu_icon"
            android:background="#ffffff" />

        <LinearLayout
            android:id="@+id/right_menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/center_icon"
            android:elevation="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/bottom_navigation04"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="btnOnclick"
                android:orientation="vertical"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/workstatus_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/worktogo_resize"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/workstatus_tv"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="근무현황"
                    android:textColor="#696969"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText,TextContrastCheck" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_navigation05"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:onClick="btnOnclick"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    tools:ignore="NestedWeights">

                    <ImageView
                        android:id="@+id/more_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:background="@drawable/more_icon_resize"
                        tools:ignore="NestedWeights" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/more_tv"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="더보기"
                    android:textColor="#696969"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText,TextContrastCheck" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>