<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="11dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/default_gray_round"
    android:minHeight="52dp"
    android:orientation="horizontal"
    android:padding="13dp"
    tools:ignore="HardcodedText,RtlSymmetry">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/add_detail"
        android:fontFamily="@font/inter_bold"
        android:text="name"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/list_setting"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/name"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp">

        <ImageView
            android:layout_width="3dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:background="@drawable/list_setting" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:padding="5dp"
            android:text="직급"
            android:textColor="#696969"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/jikgup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/inter_bold"
            android:gravity="start|center"
            android:padding="5dp"
            android:lines="1"
            android:text="상세정보 입력 전"
            android:textColor="#696969"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear01"
        android:layout_toStartOf="@+id/contract_state"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:padding="5dp"
            android:text="급여"
            android:textColor="#696969"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/inter_bold"
            android:gravity="start|center"
            android:padding="5dp"
            android:lines="1"
            android:text="상세정보 입력 전"
            android:textColor="#696969"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear02"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:padding="5dp"
            android:text="상태"
            android:textColor="#696969"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/jejik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="13sp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/contract_state"
        android:layout_width="81dp"
        android:layout_height="26dp"
        android:layout_alignBottom="@+id/linear02"
        android:layout_toStartOf="@+id/state"
        android:layout_marginEnd="10dp"
        app:cardBackgroundColor="#f2f2f2"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/contract_state_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:text="근로계약서 진행"
            android:textColor="#a9a9a9"
            android:textSize="10sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/state"
        android:layout_width="37dp"
        android:layout_height="26dp"
        android:layout_alignEnd="@+id/list_setting"
        android:layout_alignBottom="@+id/linear02"
        android:layout_toStartOf="@+id/list_setting"
        app:cardBackgroundColor="#f2f2f2"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/state_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:padding="5dp"
            android:text="휴직"
            android:textColor="@color/black"
            android:textSize="10sp" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linear04"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/linear02"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">
        <androidx.cardview.widget.CardView
            android:id="@+id/contract_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:minWidth="80dp"
            app:cardBackgroundColor="#EFF4FD"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/contract_area_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:padding="5dp"
                android:text="근로계약서 진행"
                android:textColor="@color/blue"
                android:textSize="13sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/add_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:minWidth="70dp"
            app:cardBackgroundColor="#EFF4FD"
            app:cardCornerRadius="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:padding="5dp"
                android:text="추가정보입력"
                android:textColor="@color/blue"
                android:textSize="13sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>