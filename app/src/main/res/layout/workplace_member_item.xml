<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="52dp"
    android:orientation="horizontal"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    tools:ignore="HardcodedText,RtlSymmetry">

    <androidx.cardview.widget.CardView
        android:id="@+id/member_profile_area"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:cardBackgroundColor="@color/new_blue"
        app:cardCornerRadius="60dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/member_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/certi02" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/member_profile_area"
        android:fontFamily="@font/gangwonedu_bold"
        android:text="name"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <LinearLayout
        android:id="@+id/linear01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_marginTop="4dp"
        android:layout_toStartOf="@+id/list_setting"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="center"
            android:text="직급"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/jikgup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="start|center"
            android:lines="1"
            android:text="상세정보 입력 전"
            android:textColor="@color/black"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear01"
        android:layout_alignStart="@+id/name"
        android:layout_marginTop="4dp"
        android:layout_toStartOf="@+id/list_setting"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="center"
            android:text="급여"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="start|center"
            android:lines="1"
            android:text="상세정보 입력 전"
            android:textColor="@color/black"
            android:textSize="13sp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/contract_state"
        android:layout_width="102dp"
        android:layout_height="26dp"
        android:layout_below="@+id/linear02"
        android:layout_alignStart="@+id/linear02"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        app:cardBackgroundColor="#f2f2f2"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/contract_state_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="center"
            android:text="근로계약서 미진행"
            android:textColor="#a9a9a9"
            android:textSize="12sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/state"
        android:layout_width="37dp"
        android:layout_height="26dp"
        android:layout_alignTop="@+id/contract_state"
        android:layout_alignBottom="@+id/contract_state"
        android:layout_toEndOf="@+id/contract_state"
        app:cardBackgroundColor="#333"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/state_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="center"
            android:padding="5dp"
            android:text="휴직"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linear04"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/contract_state"
        android:layout_alignStart="@+id/contract_state"
        android:layout_alignEnd="@+id/list_setting"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/contract_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:minWidth="80dp"
            app:cardBackgroundColor="@color/blue_200"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/contract_area_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="center"
                android:padding="5dp"
                android:text="근로계약서 진행"
                android:textColor="@color/new_blue"
                android:textSize="15sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/add_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:minWidth="70dp"
            app:cardBackgroundColor="@color/new_blue"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/add_detail_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="center"
                android:padding="5dp"
                android:text="추가정보입력"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/list_setting"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/name"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="4dp"
            android:layout_height="17dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_list_setting" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/linear04"
        android:layout_marginTop="20dp"
        android:background="@color/gray_200" />
</RelativeLayout>